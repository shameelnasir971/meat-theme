{%- style -%}
  /* Font Import for Exact Match */
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@500;700&display=swap');

  /* Section Wrapper */
  .about-meat-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .about-meat-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
  }

  /* Grid Layout */
  .about-meat-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; 
    gap: 50px; /* Gap kam kiya taake width/height compact rahe */
    align-items: center; 
  }

  /* Image Column */
  .about-meat-image-col {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
  }

  .about-meat-image-col img {
    width: 100%;
    height: 100%;
    aspect-ratio: 1 / 1; /* Square shape maintained */
    object-fit: cover;
    border-radius: 24px;
    display: block;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
    max-height: 500px; /* Height control taake image zyada lambi na ho */
  }

  /* Text Column */
  .about-meat-text-col {
    text-align: left;
    padding-right: 10px;
  }

  .about-meat-text-col h2 {
    font-family: 'Oswald', sans-serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0 0 20px 0;
    line-height: 1.2;
    letter-spacing: 0.5px;
    text-transform: capitalize;
  }

  .about-meat-text-col .description {
    font-size: {{ section.settings.desc_size }}px;
    color: {{ section.settings.text_color | color_modify: 'alpha', 0.8 }};
    line-height: 1.6; /* Line height thoda tight kiya */
    margin-bottom: 30px;
  }

  .about-meat-text-col .description p {
    margin-bottom: 12px;
  }

  /* Button Style */
  .btn-meat-shop {
    display: inline-block;
    background-color: {{ section.settings.btn_color }};
    color: {{ section.settings.btn_text_color }};
    padding: 14px 35px; /* Padding thodi adjust ki */
    border-radius: 8px; 
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(198, 40, 40, 0.25);
  }

  .btn-meat-shop:hover {
    background-color: {{ section.settings.btn_color | color_darken: 10 }};
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(198, 40, 40, 0.35);
  }

  /* RESPONSIVE MEDIA QUERIES */

  /* Tablet */
  @media (max-width: 1024px) {
    .about-meat-grid { gap: 30px; }
    .about-meat-text-col h2 { font-size: 34px; }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .about-meat-{{ section.id }} {
      padding-top: 40px;
      padding-bottom: 40px;
    }
    .about-meat-grid {
      grid-template-columns: 1fr; 
      gap: 30px;
    }
    .about-meat-image-col {
      max-width: 100%;
    }
    .about-meat-image-col img {
      aspect-ratio: 1.2 / 1;
      max-height: 350px; /* Mobile par height control */
    }
    .about-meat-text-col {
      padding-left: 0;
      padding-right: 0;
      text-align: left;
    }
    .about-meat-text-col h2 {
      font-size: 28px;
    }
    .btn-meat-shop {
      width: auto;
    }
  }
{%- endstyle -%}

<section class="about-meat-{{ section.id }}">
  <div class="about-meat-container">
    <div class="about-meat-grid">

      <!-- Left Side: Image -->
      <div class="about-meat-image-col">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy', alt: section.settings.title }}
        {%- else -%}
          <!-- Placeholder Image matching the red meat theme -->
          <img src="https://images.unsplash.com/photo-1607623814075-e51df1bdc82f?q=80&w=1000&auto=format&fit=crop" alt="Fresh Steak Meat" loading="lazy" width="800" height="800">
        {%- endif -%}
      </div>

      <!-- Right Side: Content -->
      <div class="about-meat-text-col">
        <h2>{{ section.settings.title }}</h2>

        <div class="description">
          {%- if section.settings.content != blank -%}
            {{ section.settings.content }}
          {%- else -%}
            <p>We are a premium online meat store based in the UAE, dedicated to delivering fresh, high-quality halal meat to homes across the country. Our focus is on trust, freshness, and customer satisfaction.</p>
            <p>Every cut of meat is carefully selected, hygienically processed, and prepared by skilled butchers who understand quality and precision. We follow strict halal standards and maintain proper temperature control from sourcing to delivery. Whether you are shopping for daily meals, family gatherings, or special occasions, we ensure that every order meets the highest standards of taste and freshness. With reliable delivery.</p>
          {%- endif -%}
        </div>

        {%- if section.settings.btn_label != blank -%}
          <a href="{{ section.settings.btn_link | default: '#' }}" class="btn-meat-shop">
            {{ section.settings.btn_label }}
          </a>
        {%- endif -%}
      </div>

    </div>
  </div>
</section>

