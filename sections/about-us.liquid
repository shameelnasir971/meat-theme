{%- style -%}
  /* Section Wrapper */
  .about-meat-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
    overflow: hidden;
  }

  .about-meat-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
  }

  /* Grid Layout  */
  .about-meat-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; 
    gap: 60px;
    align-items: center; 
  }

  /* Image Column */
  .about-meat-image-col {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
  }

  .about-meat-image-col img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 20px;
    display: block;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05); 
  }

  /* Text Column */
  .about-meat-text-col {
    text-align: left;
    padding-left: 20px;
  }

  .about-meat-text-col h2 {
    font-family: 'Impact', 'Oswald', sans-serif; 
    font-size: {{ section.settings.title_size }}px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0 0 20px 0;
    line-height: 1.1;
    letter-spacing: 0.5px;
    text-transform: capitalize;
  }


  .about-meat-text-col .description {
    font-size: {{ section.settings.desc_size }}px;
    color: {{ section.settings.text_color | color_modify: 'alpha', 0.8 }};
    line-height: 1.6;
    margin-bottom: 30px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .about-meat-text-col .description p {
    margin-bottom: 15px;
  }

  /* Button  */
  .btn-meat-shop {
    display: inline-block;
    background-color: {{ section.settings.btn_color }};
    color: {{ section.settings.btn_text_color }};
    padding: 14px 35px;
    border-radius: 6px; 
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .btn-meat-shop:hover {
    background-color: {{ section.settings.btn_color | color_darken: 10 }};
    transform: translateY(-2px);
  }

  /* RESPONSIVE MEDIA QUERIES */

  /* Tablet (iPad) */
  @media (max-width: 1024px) {
    .about-meat-grid { gap: 40px; }
    .about-meat-text-col h2 { font-size: 36px; }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .about-meat-{{ section.id }} {
      padding-top: 50px;
      padding-bottom: 50px;
    }
    .about-meat-grid {
      grid-template-columns: 1fr; 
      gap: 30px;
    }
    .about-meat-image-col {
      max-width: 100%;
    }
    .about-meat-text-col {
      padding-left: 0;
      text-align: center; 
    }
    .about-meat-text-col h2 {
      font-size: 30px;
    }
    .btn-meat-shop {
      width: 100%; 
      box-sizing: border-box;
      text-align: center;
    }
  }
{%- endstyle -%}

<section class="about-meat-{{ section.id }}">
  <div class="about-meat-container">
    <div class="about-meat-grid">

      <!-- Left Side: Image -->
      <div class="about-meat-image-col">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy', alt: section.settings.title }}
        {%- else -%}
          <img src="https://images.unsplash.com/photo-1607623814075-e51df1bdc82f?q=80&w=1000&auto=format&fit=crop" alt="Fresh Steak Meat" loading="lazy" width="800" height="800">
        {%- endif -%}
      </div>

      <!-- Right Side: Content -->
      <div class="about-meat-text-col">
        <h2>{{ section.settings.title }}</h2>

        <div class="description">
          {%- if section.settings.content != blank -%}
            {{ section.settings.content }}
          {%- else -%}
            <p>We are a premium online meat store based in the UAE, dedicated to delivering fresh, high-quality halal meat to homes across the country. Our focus is on trust, freshness, and customer satisfaction.</p>
            <p>Every cut of meat is carefully selected, hygienically processed, and prepared by skilled butchers who understand quality and precision. We follow strict halal standards and maintain proper temperature control from sourcing to delivery.</p>
          {%- endif -%}
        </div>

        {%- if section.settings.btn_label != blank -%}
          <a href="{{ section.settings.btn_link | default: '#' }}" class="btn-meat-shop">
            {{ section.settings.btn_label }}
          </a>
        {%- endif -%}
      </div>

    </div>
  </div>
</section>

