{%- style -%}
  /* Font Import */
  @import url('https://fonts.googleapis.com/css2?family=Questrial&family=Oswald:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap');

  /* Section Wrapper */
  .about-meat-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 100%;
    overflow: hidden;
    font-family: {{ section.settings.body_font_family }};
  }

  .about-meat-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
  }

  /* Grid Layout */
  .about-meat-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; 
    gap: {{ section.settings.grid_gap }}px;
    align-items: center; 
  }

  /* Image Column */
  .about-meat-image-col {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    {% if section.settings.enable_animation %}
      animation: {{ section.settings.animation_style }} 1s ease-out forwards;
    {% endif %}
  }

  .about-meat-image-col img {
    width: 100%;
    height: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: {{ section.settings.img_radius }}px;
    display: block;
    box-shadow: 0 15px 40px rgba(0,0,0,0.08);
    max-height: 550px;
    transition: transform 0.5s ease;
  }
  
  {% if section.settings.enable_img_hover %}
    .about-meat-image-col img:hover {
      transform: scale(1.03);
    }
  {% endif %}

  /* Text Column */
  .about-meat-text-col {
    text-align: {{ section.settings.text_align }};
    {% if section.settings.enable_animation %}
      animation: {{ section.settings.animation_style }} 1.2s ease-out forwards;
    {% endif %}
  }

  .about-meat-text-col h2 {
    font-family: {{ section.settings.heading_font_family }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin: 0 0 20px 0;
    line-height: 1.2;
    letter-spacing: {{ section.settings.heading_spacing }}px;
    text-transform: {{ section.settings.heading_transform }};
  }

  .about-meat-text-col .description {
    font-size: {{ section.settings.desc_size }}px;
    color: {{ section.settings.desc_color }};
    line-height: 1.7;
    margin-bottom: 30px;
  }

  /* Dynamic Features List */
  .about-features-list {
    margin-bottom: 35px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 16px;
    font-weight: 500;
    color: {{ section.settings.heading_color }};
  }

  .feature-icon-img {
    width: {{ section.settings.icon_width }}px;
    height: {{ section.settings.icon_width }}px;
    object-fit: contain;
  }

  /* Button Style */
  .btn-meat-shop {
    display: inline-block;
    background-color: {{ section.settings.btn_color }};
    color: {{ section.settings.btn_text_color }};
    padding: {{ section.settings.btn_padding_v }}px {{ section.settings.btn_padding_h }}px;
    border-radius: {{ section.settings.btn_radius }}px; 
    text-decoration: none;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
    font-family: {{ section.settings.heading_font_family }};
    text-transform: uppercase;
  }

  .btn-meat-shop:hover {
    background-color: {{ section.settings.btn_hover_color }};
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.25);
  }

  /* Animations Keyframes */
  @keyframes fadeUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes slideIn { from { opacity: 0; transform: translateX(-50px); } to { opacity: 1; transform: translateX(0); } }
  @keyframes zoomIn { from { opacity: 0; transform: scale(0.9); } to { opacity: 1; transform: scale(1); } }

  /* Responsive */
  @media (max-width: 1024px) {
    .about-meat-grid { gap: 30px; }
    .about-meat-text-col h2 { font-size: 34px; }
  }

  @media (max-width: 767px) {
    .about-meat-grid { grid-template-columns: 1fr; gap: 40px; }
    .about-meat-image-col img { aspect-ratio: 1.2 / 1; max-height: 380px; }
    .about-meat-text-col { text-align: center; }
    .about-features-list { align-items: center; }
    .about-meat-text-col h2 { font-size: 30px; }
  }
{%- endstyle -%}

<section class="about-meat-{{ section.id }}">
  <div class="about-meat-container">
    <div class="about-meat-grid">

      <!-- Left Side: Image -->
      <div class="about-meat-image-col">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1000 | image_tag: loading: 'lazy', alt: section.settings.title }}
        {%- else -%}
          <img src="https://images.unsplash.com/photo-1607623814075-e51df1bdc82f?q=80&w=1000&auto=format&fit=crop" alt="Fresh Steak Meat" loading="lazy" width="800" height="800">
        {%- endif -%}
      </div>

      <!-- Right Side: Content -->
      <div class="about-meat-text-col">
        <h2>{{ section.settings.title }}</h2>

        <div class="description">
          {{ section.settings.content }}
        </div>

        <!-- Dynamic Features List via Blocks -->
        {% if section.blocks.size > 0 %}
          <div class="about-features-list">
            {% for block in section.blocks %}
              <div class="feature-item" {{ block.shopify_attributes }}>
                {% if block.settings.feature_icon != blank %}
                  <img src="{{ block.settings.feature_icon | image_url: width: 50 }}" class="feature-icon-img" alt="icon">
                {% else %}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="{{ section.settings.btn_color }}" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {% endif %}
                <span>{{ block.settings.feature_text }}</span>
              </div>
            {% endfor %}
          </div>
        {% endif %}

        {%- if section.settings.btn_label != blank -%}
          <a href="{{ section.settings.btn_link | default: '#' }}" class="btn-meat-shop">
            {{ section.settings.btn_label }}
          </a>
        {%- endif -%}
      </div>

    </div>
  </div>
</section>

