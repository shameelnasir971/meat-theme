{% comment %}
  Announcement Bar Slider with Show/Hide Option
{% endcomment %}

{% if section.settings.show_announcement %}

{%- style -%}
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Poppins:wght@400;500;600&family=Questrial&display=swap');

  .announcement-bar-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_v }}px 0;
    overflow: hidden;
    position: relative;
    z-index: 1002; /* Ensure it stays above header */
    font-family: {{ section.settings.font_family }};
  }

  .ab-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.icon_text_gap }}px; 
    max-width: {{ section.settings.container_width | default: 1400 }}px;
    margin: 0 auto;
    padding: 0 10px;
  }

  .ab-slider-container {
    display: flex;
    overflow: hidden;
    position: relative;
    flex: 0 1 auto; 
    max-width: 80%;
  }

  .ab-slide {
    min-width: 100%;
    transition: transform {{ section.settings.anim_speed }}s ease;
    text-align: center;
    display: none;
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    letter-spacing: {{ section.settings.letter_spacing }}px;
    text-transform: {{ section.settings.text_transform }};
    line-height: 1.2;
    white-space: nowrap; 
  }

  .ab-slide.active {
    display: block;
    {% if section.settings.enable_fade %}
    animation: abFadeIn {{ section.settings.anim_speed }}s ease-in-out;
    {% endif %}
  }

  @keyframes abFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .ab-slide a {
    color: inherit;
    text-decoration: none;
    transition: 0.3s;
  }
  
  .ab-slide a:hover {
    color: {{ section.settings.hover_color }};
  }

  .ab-icon {
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    font-size: {{ section.settings.icon_size }}px;
    padding: 0;
    opacity: 0.8;
    transition: 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .ab-icon img {
    width: {{ section.settings.icon_size }}px;
    height: auto;
    object-fit: contain;
  }

  .ab-icon:hover { 
    opacity: 1; 
    color: {{ section.settings.hover_color }};
    transform: scale(1.1);
  }

  {% if section.blocks.size <= 1 or section.settings.show_arrows == false %}
    .ab-icon { display: none; }
  {% endif %}

  @media (max-width: 767px) {
    .ab-wrapper { gap: {{ section.settings.icon_text_gap | divided_by: 2 | at_least: 10 }}px; }
    .ab-slide { font-size: {{ section.settings.font_size | minus: 2 }}px; white-space: normal; }
  }
{%- endstyle -%}

<div class="announcement-bar-{{ section.id }}" data-section-id="{{ section.id }}" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
  <div class="ab-wrapper">
    <button class="ab-icon ab-prev" aria-label="Previous Slide">
      {% if section.settings.custom_prev_icon != blank %}
        <img src="{{ section.settings.custom_prev_icon | image_url: width: 50 }}" alt="Prev">
      {% else %}
        <i class="fa fa-chevron-left"></i>
      {% endif %}
    </button>

    <div class="ab-slider-container">
      {%- for block in section.blocks -%}
        <div class="ab-slide {% if forloop.first %}active{% endif %}" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
          {%- else -%}
            {{ block.settings.text }}
          {%- endif -%}
        </div>
      {%- endfor -%}

      {%- if section.blocks.size == 0 -%}
        <div class="ab-slide active">Serving Freshness to UAE Homes</div>
      {%- endif -%}
    </div>

    <button class="ab-icon ab-next" aria-label="Next Slide">
      {% if section.settings.custom_next_icon != blank %}
        <img src="{{ section.settings.custom_next_icon | image_url: width: 50 }}" alt="Next">
      {% else %}
        <i class="fa fa-chevron-right"></i>
      {% endif %}
    </button>
  </div>
</div>

<script>
  (function() {
    function initSlider() {
      const container = document.querySelector('.announcement-bar-{{ section.id }}');
      if (!container) return;
      const slides = container.querySelectorAll('.ab-slide');
      if (slides.length <= 1) return;
      const prevBtn = container.querySelector('.ab-prev');
      const nextBtn = container.querySelector('.ab-next');
      const autoplay = container.getAttribute('data-autoplay') === 'true';
      const speed = parseInt(container.getAttribute('data-speed'));
      let currentIndex = 0;
      let timer;
      function showSlide(index) {
        slides.forEach(s => s.classList.remove('active'));
        currentIndex = (index + slides.length) % slides.length;
        slides[currentIndex].classList.add('active');
      }
      if(nextBtn) nextBtn.onclick = () => { showSlide(currentIndex + 1); resetTimer(); };
      if(prevBtn) prevBtn.onclick = () => { showSlide(currentIndex - 1); resetTimer(); };
      function resetTimer() {
        if (autoplay) {
          clearInterval(timer);
          timer = setInterval(() => showSlide(currentIndex + 1), speed);
        }
      }
      if (autoplay) resetTimer();
    }
    document.addEventListener('DOMContentLoaded', initSlider);
    document.addEventListener('shopify:section:load', initSlider);
  })();
</script>

{% endif %}

{% schema %}
{
  "name": "Announcement Bar Slider",
  "settings": [
    {
      "type": "header",
      "content": "Visibility Settings"
    },
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement Bar",
      "default": true
    },
    { "type": "header", "content": "Typography & Fonts" },
    {
      "type": "select",
      "id": "font_family",
      "label": "Font Family",
      "options": [
        { "value": "'Questrial', sans-serif", "label": "Questrial" },
        { "value": "'Oswald', sans-serif", "label": "Oswald" },
        { "value": "'Poppins', sans-serif", "label": "Poppins" },
        { "value": "sans-serif", "label": "System Sans" }
      ],
      "default": "'Poppins', sans-serif"
    },
    { "type": "range", "id": "font_size", "label": "Font Size (px)", "min": 10, "max": 30, "default": 13 },
    { "type": "range", "id": "font_weight", "label": "Font Weight", "min": 300, "max": 800, "step": 100, "default": 400 },
    { "type": "range", "id": "letter_spacing", "label": "Letter Spacing (px)", "min": 0, "max": 5, "default": 0 },
    {
      "type": "select",
      "id": "text_transform",
      "label": "Text Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "capitalize", "label": "Capitalize" }
      ],
      "default": "none"
    },
    { "type": "header", "content": "Colors & Style" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#A10C0E" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#FFFFFF" },
    { "type": "color", "id": "hover_color", "label": "Hover Color", "default": "#FFD700" },
    { "type": "range", "id": "padding_v", "label": "Vertical Padding (px)", "min": 2, "max": 50, "default": 10 },
    { "type": "range", "id": "icon_text_gap", "label": "Icon to Text Gap (px)", "min": 5, "max": 100, "step": 5, "default": 30 },
    { "type": "header", "content": "Slider Settings" },
    { "type": "checkbox", "id": "autoplay", "label": "Enable Autoplay", "default": true },
    { "type": "range", "id": "autoplay_speed", "label": "Autoplay Speed (sec)", "min": 2, "max": 15, "default": 5 },
    { "type": "select", "id": "anim_speed", "label": "Transition Speed", 
      "options": [
        {"value": "0.3", "label": "Fast"},
        {"value": "0.5", "label": "Normal"},
        {"value": "0.8", "label": "Slow"}
      ], "default": "0.5" 
    },
    { "type": "checkbox", "id": "enable_fade", "label": "Enable Fade Animation", "default": true },
    { "type": "header", "content": "Navigation Icons" },
    { "type": "checkbox", "id": "show_arrows", "label": "Show Navigation Icons", "default": true },
    { "type": "image_picker", "id": "custom_prev_icon", "label": "Custom Prev Icon (Upload)" },
    { "type": "image_picker", "id": "custom_next_icon", "label": "Custom Next Icon (Upload)" },
    { "type": "range", "id": "icon_size", "label": "Icon Size (px)", "min": 8, "max": 40, "default": 12 }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement Line",
      "settings": [
        { "type": "text", "id": "text", "label": "Message", "default": "Serving Freshness to UAE Homes" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar Slider",
      "blocks": [ { "type": "announcement" }, { "type": "announcement" } ]
    }
  ]
}
{% endschema %}