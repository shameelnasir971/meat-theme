<!-- announcement-bar.liquid -->
<div class="custom-announcement custom-announcement-{{ section.id }}">
  <div class="announcement-content announcement-content-{{ section.id }}">
    {% if section.settings.show_left_icon %}
      <i class="fa fa-chevron-left announcement-icon"></i>
    {% endif %}
    
    <span class="announcement-text">{{ section.settings.announcement_text }}</span>
    
    {% if section.settings.show_right_icon %}
      <i class="fa fa-chevron-right announcement-icon"></i>
    {% endif %}
  </div>
</div>

<style>
  /* Base Styles (Desktop) */
  .custom-announcement-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_vertical }}px {{ section.settings.padding_horizontal }}px;
    font-size: {{ section.settings.font_size }}px;
    letter-spacing: {{ section.settings.letter_spacing }}px;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
    display: block;
  }

  .announcement-content-{{ section.id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ section.settings.gap_size }}px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .custom-announcement-{{ section.id }} .announcement-icon {
    font-size: {{ section.settings.icon_size }}px;
    opacity: {{ section.settings.icon_opacity }};
    cursor: pointer;
    flex-shrink: 0;
  }

  .custom-announcement-{{ section.id }} .announcement-text {
    line-height: 1.2;
    display: inline-block;
  }

  /* Tablet Responsive (991px and below) */
  @media (max-width: 991px) {
    .announcement-content-{{ section.id }} {
      gap: {{ section.settings.gap_size | divided_by: 2 | at_least: 20 }}px;
    }
  }

  /* Mobile Responsive (767px and below) */
  @media (max-width: 767px) {
    .custom-announcement-{{ section.id }} {
      padding-top: 10px;
      padding-bottom: 10px;
      padding-left: 15px;
      padding-right: 15px;
      /* Clamping font size so it doesn't get too big on mobile */
      font-size: {% if section.settings.font_size > 14 %}14{% else %}{{ section.settings.font_size }}{% endif %}px;
    }
    
    .announcement-content-{{ section.id }} {
      gap: 15px; /* Fixed small gap for mobile */
    }

    .custom-announcement-{{ section.id }} .announcement-icon {
      font-size: 10px; /* Smaller icons for mobile */
    }
  }

  /* Very Small Screens (480px and below) */
  @media (max-width: 480px) {
    .custom-announcement-{{ section.id }} {
      font-size: 12px;
      letter-spacing: 0.5px;
    }
    .announcement-content-{{ section.id }} {
      gap: 10px;
    }
  }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Serving Freshness to UAE Homes"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#A10C0E"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size (px)",
      "min": 10,
      "max": 24,
      "step": 1,
      "default": 13
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "label": "Letter Spacing (px)",
      "min": 0,
      "max": 5,
      "step": 0.5,
      "default": 1
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Vertical Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal Padding (px)",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "gap_size",
      "label": "Gap Between Items (px)",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size (px)",
      "min": 8,
      "max": 24,
      "step": 1,
      "default": 12
    },
    {
      "type": "range",
      "id": "icon_opacity",
      "label": "Icon Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.8
    },
    {
      "type": "checkbox",
      "id": "show_left_icon",
      "label": "Show Left Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_right_icon",
      "label": "Show Right Icon",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Custom"
    }
  ]
}
{% endschema %}