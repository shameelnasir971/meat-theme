{%- style -%}
/* Fonts Import */
@import url('https://fonts.googleapis.com/css2?family=Questrial&family=Oswald:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap');

.hero-section-{{ section.id }} {
  position: relative;
  min-height: {{ section.settings.hero_height }}vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  {% if section.settings.background_image != blank %}
    background-image: url('{{ section.settings.background_image | img_url: "2000x" }}');
  {% else %}
    background-image: url('https://images.unsplash.com/photo-1544025162-d76694265947?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80');
  {% endif %}
  background-size: cover;
  background-position: {{ section.settings.bg_position }};
  background-attachment: {{ section.settings.bg_behavior }};
  overflow: hidden;
}

/* Overlay Fix */
.hero-section-{{ section.id }}::before {
  content: '';
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: {{ section.settings.overlay_color }};
  opacity: {{ section.settings.overlay_opacity }};
  z-index: 1;
}

.hero-container-{{ section.id }} {
  max-width: {{ section.settings.container_width }}px;
  margin: 0 auto;
  padding: 0 40px;
  width: 100%;
  position: relative;
  z-index: 10; /* Higher than overlay */
}

.hero-grid-{{ section.id }} {
  display: flex;
  justify-content: {{ section.settings.content_alignment_flex }};
}

.hero-content-wrap-{{ section.id }} {
  max-width: {{ section.settings.content_max_width }}px;
  text-align: {{ section.settings.text_align }};
  color: {{ section.settings.text_color }};
  {% if section.settings.enable_animation %}
    animation: {{ section.settings.animation_style }} 1s ease-out forwards;
  {% endif %}
}

/* Heading Fix */
.hero-main-title-{{ section.id }} {
  display: block !important;
  visibility: visible !important;
  font-family: {{ section.settings.heading_font_family }};
  font-size: {{ section.settings.title_size }}px;
  line-height: {{ section.settings.heading_line_height }};
  margin: 0 0 25px 0;
  text-transform: {{ section.settings.heading_transform }};
  font-weight: {{ section.settings.heading_weight }};
  color: {{ section.settings.heading_color }} !important;
  letter-spacing: {{ section.settings.heading_spacing }}px;
}

.hero-icon-img {
  width: {{ section.settings.icon_size }}px;
  margin-bottom: 20px;
  display: inline-block;
}

/* Subtext Fix */
.hero-subtext-{{ section.id }} {
  display: block !important;
  visibility: visible !important;
  font-family: {{ section.settings.body_font_family }};
  font-size: {{ section.settings.subtext_size }}px;
  line-height: 1.6;
  margin-bottom: 40px;
  color: {{ section.settings.text_color }} !important;
  opacity: 1;
}

.hero-action-btns {
  display: flex;
  gap: 20px;
  justify-content: {% if section.settings.text_align == 'center' %}center{% elsif section.settings.text_align == 'right' %}flex-end{% else %}flex-start{% endif %};
}

.btn-hero-{{ section.id }} {
  padding: {{ section.settings.btn_padding_v }}px {{ section.settings.btn_padding_h }}px;
  border-radius: {{ section.settings.btn_radius }}px;
  font-weight: 700;
  text-decoration: none;
  transition: 0.3s ease;
  font-size: 16px;
  display: inline-block;
  font-family: {{ section.settings.heading_font_family }};
}

.btn-primary-hero-{{ section.id }} { 
  background-color: {{ section.settings.btn1_bg }}; 
  color: {{ section.settings.btn1_text_color }}; 
  border: 1px solid {{ section.settings.btn1_bg }};
}
.btn-primary-hero-{{ section.id }}:hover { 
  background-color: {{ section.settings.btn1_hover_bg }}; 
  color: {{ section.settings.btn1_hover_text }};
  transform: translateY(-3px);
}

.btn-secondary-hero-{{ section.id }} { 
  background-color: {{ section.settings.btn2_bg }}; 
  color: {{ section.settings.btn2_text_color }};
  border: 2px solid {{ section.settings.btn2_border }};
}
.btn-secondary-hero-{{ section.id }}:hover { 
  background-color: {{ section.settings.btn2_hover_bg }}; 
  color: {{ section.settings.btn2_hover_text }};
  transform: translateY(-3px);
}

/* Keyframes */
@keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
@keyframes slideInLeft { from { opacity: 0; transform: translateX(-50px); } to { opacity: 1; transform: translateX(0); } }
@keyframes zoomIn { from { opacity: 0; transform: scale(0.9); } to { opacity: 1; transform: scale(1); } }

@media (max-width: 991px) {
  .hero-grid-{{ section.id }} { justify-content: center; }
  .hero-content-wrap-{{ section.id }} { text-align: center; max-width: 100%; }
  .hero-main-title-{{ section.id }} { font-size: clamp(35px, 8vw, 55px); }
  .hero-action-btns { justify-content: center; }
}

@media (max-width: 600px) {
  .hero-action-btns { flex-direction: column; gap: 15px; }
  .btn-hero-{{ section.id }} { width: 100%; text-align: center; }
  .hero-section-{{ section.id }} { min-height: 70vh; }
}
{%- endstyle -%}

<section class="hero-section-{{ section.id }}">
  <div class="hero-container-{{ section.id }}">
    <div class="hero-grid-{{ section.id }}">
      <div class="hero-content-wrap-{{ section.id }}">
        
        {% if section.settings.title_icon != blank %}
          <img src="{{ section.settings.title_icon | img_url: '300x' }}" alt="Icon" class="hero-icon-img">
        {% endif %}

        {% if section.settings.main_title != blank %}
          <h1 class="hero-main-title-{{ section.id }}">{{ section.settings.main_title }}</h1>
        {% endif %}

        {% if section.settings.sub_text != blank %}
          <p class="hero-subtext-{{ section.id }}">{{ section.settings.sub_text }}</p>
        {% endif %}
        
        <div class="hero-action-btns">
          {% if section.settings.btn1_text != blank %}
            <a href="{{ section.settings.btn1_link }}" class="btn-hero-{{ section.id }} btn-primary-hero-{{ section.id }}">{{ section.settings.btn1_text }}</a>
          {% endif %}
          {% if section.settings.btn2_text != blank %}
            <a href="{{ section.settings.btn2_link }}" class="btn-hero-{{ section.id }} btn-secondary-hero-{{ section.id }}">{{ section.settings.btn2_text }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

