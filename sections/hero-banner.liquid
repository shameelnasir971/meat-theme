{%- style -%}
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@700&family=Inter:wght@400;500;600;700&display=swap');

  .hero-section-{{ section.id }} {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 140px 0 80px;
    {% if section.settings.background_image != blank %}
      background-image: url('{{ section.settings.background_image | img_url: "2000x" }}');
    {% else %}
      background-image: url('https://images.unsplash.com/photo-1544025162-d76694265947?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80');
    {% endif %}
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    font-family: 'Inter', sans-serif;
    color: #fff;
    overflow: hidden;
  }

  .hero-section-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0,0,0,0.3);
    z-index: 1;
  }

  .hero-container-{{ section.id }} {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 40px;
    width: 100%;
    position: relative;
    z-index: 2;
  }

  .hero-grid {
    display: flex;
    justify-content: flex-end; /* Content ko right side lane ke liye */
  }

  .hero-content-wrap {
    max-width: 650px; /* Right side par content ki width control karne ke liye */
    text-align: left; /* Text alignment left hi rakhi hai readability ke liye */
  }

  .hero-main-title {
    font-family: 'Oswald', sans-serif;
    font-size: clamp(40px, 6vw, 85px);
    line-height: 1.1;
    margin-bottom: 25px;
    text-transform: capitalize;
    font-weight: 700;
  }

  .hero-subtext {
    font-size: 18px;
    line-height: 1.6;
    margin-bottom: 40px;
    max-width: 550px;
    opacity: 0.95;
  }

  .hero-action-btns {
    display: flex;
    gap: 20px;
  }

  .btn-primary-hero, .btn-secondary-hero {
    padding: 18px 45px;
    border-radius: 8px;
    font-weight: 700;
    text-decoration: none;
    text-transform: capitalize;
    transition: 0.3s;
    font-size: 16px;
    display: inline-block;
  }

  .btn-primary-hero { background-color: #d32f2f; color: #fff; }
  .btn-secondary-hero { background-color: #fff; color: #d32f2f; }
  .btn-primary-hero:hover { background-color: #b71c1c; transform: translateY(-3px); }

  /* Responsive Design */
  @media (max-width: 991px) {
    .hero-grid { justify-content: center; }
    .hero-content-wrap { text-align: center; }
    .hero-subtext { margin: 0 auto 40px; }
    .hero-action-btns { justify-content: center; }
  }

  @media (max-width: 600px) {
    .hero-action-btns { flex-direction: column; }
    .btn-primary-hero, .btn-secondary-hero { width: 100%; }
  }
{%- endstyle -%}

<section class="hero-section-{{ section.id }}">
  <div class="hero-container-{{ section.id }}">
    <div class="hero-grid">
      
      <!-- Content Right side shifted -->
      <div class="hero-content-wrap">
        <h1 class="hero-main-title">{{ section.settings.main_title }}</h1>
        <p class="hero-subtext">{{ section.settings.sub_text }}</p>
        <div class="hero-action-btns">
          {% if section.settings.btn1_text != blank %}
            <a href="{{ section.settings.btn1_link }}" class="btn-primary-hero">{{ section.settings.btn1_text }}</a>
          {% endif %}
          {% if section.settings.btn2_text != blank %}
            <a href="{{ section.settings.btn2_link }}" class="btn-secondary-hero">{{ section.settings.btn2_text }}</a>
          {% endif %}
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "Fresh Halal Meat, Cut to Perfection"
    },
    {
      "type": "textarea",
      "id": "sub_text",
      "label": "Sub Text",
      "default": "Sourced from trusted farms, expertly cut, and delivered fresh to your doorstep."
    },
    {
      "type": "text",
      "id": "btn1_text",
      "label": "Button 1 Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "btn1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "btn2_text",
      "label": "Button 2 Text",
      "default": "Today's Deals"
    },
    {
      "type": "url",
      "id": "btn2_link",
      "label": "Button 2 Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Banner"
    }
  ]
}
{% endschema %}