<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<footer class="section-{{ section.id }}">
  <div class="footer-container">
    <div class="footer-grid">

      <!-- COLUMN 1: Brand Info -->
      <div class="footer-column">
        <div class="footer-logo">
          {%- if section.settings.logo != blank -%}
            <img 
              src="{{ section.settings.logo | image_url: width: 300 }}" 
              alt="{{ section.settings.logo.alt | default: shop.name }}" 
              width="{{ section.settings.logo_width }}"
              height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio | ceil }}"
              loading="lazy"
            >
          {%- else -%}
            <img 
              src="https://cdn-icons-png.flaticon.com/512/1046/1046769.png" 
              alt="Meat Shop" 
              width="65" 
              height="65" 
              loading="lazy"
            >
          {%- endif -%}
          
          {%- if section.settings.show_logo_text -%}
            <h2 class="logo-text">{{ section.settings.logo_text }}</h2>
          {%- endif -%}
        </div>

        <p class="footer-desc">{{ section.settings.description }}</p>

        <div class="social-wrapper">
          <a href="{{ section.settings.social_facebook | default: '#' }}" class="social-box"><i class="fab fa-facebook-f"></i></a>
          <a href="{{ section.settings.social_twitter | default: '#' }}" class="social-box"><i class="fab fa-twitter"></i></a>
          <a href="{{ section.settings.social_instagram | default: '#' }}" class="social-box"><i class="fab fa-instagram"></i></a>
          <a href="{{ section.settings.social_linkedin | default: '#' }}" class="social-box"><i class="fab fa-linkedin-in"></i></a>
          <a href="{{ section.settings.social_youtube | default: '#' }}" class="social-box"><i class="fab fa-youtube"></i></a>
        </div>
      </div>

      <!-- COLUMN 2: Menu 1 -->
      <div class="footer-column">
        <h4 class="footer-h4">{{ section.settings.menu_1_title }}</h4>
        <ul class="footer-ul">
          {%- if section.settings.menu_1 != blank -%}
            {%- for link in section.settings.menu_1.links -%}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {%- endfor -%}
          {%- else -%}
            <li><a href="#">Home</a></li>
            <li><a href="#">About US</a></li>
            <li><a href="#">Shop</a></li>
          {%- endif -%}
        </ul>
      </div>

      <!-- COLUMN 3: Menu 2 -->
      <div class="footer-column">
        <h4 class="footer-h4">{{ section.settings.menu_2_title }}</h4>
        <ul class="footer-ul">
          {%- if section.settings.menu_2 != blank -%}
            {%- for link in section.settings.menu_2.links -%}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {%- endfor -%}
          {%- else -%}
            <li><a href="#">Help & Support</a></li>
            <li><a href="#">Delivery Information</a></li>
            <li><a href="#">FAQs</a></li>
            <li><a href="#">Contact Us</a></li>
          {%- endif -%}
        </ul>
      </div>

      <!-- COLUMN 4: Menu 3 -->
      <div class="footer-column">
        <h4 class="footer-h4">{{ section.settings.menu_3_title }}</h4>
        <ul class="footer-ul">
          {%- if section.settings.menu_3 != blank -%}
            {%- for link in section.settings.menu_3.links -%}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {%- endfor -%}
          {%- else -%}
            <li><a href="#">Privacy Policy</a></li>
            <li><a href="#">Refund Policy</a></li>
            <li><a href="#">Terms & Conditions</a></li>
          {%- endif -%}
        </ul>
      </div>

      <!-- COLUMN 5: Contact Info -->
      <div class="footer-column">
        <h4 class="footer-h4">{{ section.settings.contact_title }}</h4>
        
        <div class="contact-item">
          <span class="contact-icon-box"><i class="far fa-envelope"></i></span> 
          <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
        </div>
        
        <div class="contact-item">
          <span class="contact-icon-box"><i class="fab fa-whatsapp"></i></span> 
          <a href="tel:{{ section.settings.contact_phone }}">{{ section.settings.contact_phone }}</a>
        </div>
        
        <div class="contact-item">
          <span class="contact-icon-box"><i class="fas fa-map-marker-alt"></i></span> 
          <span>{{ section.settings.contact_address }}</span>
        </div>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text }}
      </p>

      {%- if section.settings.show_payment_icons -%}
        <div class="payment-icons-wrap">
          <img src="https://cdn-icons-png.flaticon.com/512/196/196010.png" alt="mastercard" width="38" height="24" loading="lazy" />
          <img src="https://cdn-icons-png.flaticon.com/512/196/196001.png" alt="visa" width="38" height="24" loading="lazy" />
          <img src="https://cdn-icons-png.flaticon.com/512/5968/5968412.png" alt="apple-pay" width="38" height="24" loading="lazy" />
          <img src="https://cdn-icons-png.flaticon.com/512/6124/6124998.png" alt="google-pay" width="38" height="24" loading="lazy" />
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

