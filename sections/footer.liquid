{%- style -%}
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Oswald:wght@500;700&display=swap');

  .section-{{ section.id }} {
    --bg-color: {{ section.settings.bg_color }};
    --text-color: {{ section.settings.text_color }};
    --heading-color: {{ section.settings.heading_color }};
    --accent-red: {{ section.settings.accent_color }};
    
    background-color: var(--bg-color);
    padding: 70px 0 20px;
    font-family: 'Inter', sans-serif;
    color: var(--text-color);
    border-top: 1px solid rgba(0,0,0,0.05);
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* --- 5-Column Grid Layout --- */
  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1.2fr 1fr 1.3fr;
    gap: 30px;
    padding-bottom: 50px;
  }

  /* --- Column 1: Brand --- */
  .footer-logo {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 20px;
  }
  
  .footer-logo img {
    height: auto;
    object-fit: contain;
  }

  .logo-text {
    font-family: 'Oswald', sans-serif;
    font-size: 28px;
    font-weight: 700;
    color: var(--heading-color);
    text-transform: uppercase;
    margin: 0;
    line-height: 1;
  }

  .footer-desc {
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 25px;
    opacity: 0.8;
    max-width: 320px;
  }

  /* --- Social Icons --- */
  .social-wrapper {
    display: flex;
    gap: 12px;
  }

  .social-box {
    width: 35px;
    height: 35px;
    background: #fff;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent-red);
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    font-size: 16px;
  }

  .social-box:hover {
    background: var(--accent-red);
    color: #fff;
    transform: translateY(-3px);
  }

  /* --- Menus & Headings --- */
  .footer-h4 {
    font-family: 'Oswald', sans-serif;
    font-size: 18px;
    color: var(--heading-color);
    margin: 0 0 25px;
    font-weight: 600;
    text-transform: capitalize;
  }

  .footer-ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-ul li {
    margin-bottom: 14px;
  }

  .footer-ul a {
    text-decoration: none;
    color: var(--text-color);
    font-size: 15px;
    transition: 0.3s;
    opacity: 0.8;
    display: inline-block;
  }

  .footer-ul a:hover {
    color: var(--accent-red);
    opacity: 1;
    transform: translateX(5px);
  }

  /* --- Contact Column --- */
  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 18px;
    font-size: 14px;
    line-height: 1.5;
  }

  .contact-icon-box {
    min-width: 20px;
    font-size: 18px;
    color: var(--heading-color);
    padding-top: 1px;
  }
  
  .contact-item a {
    text-decoration: none;
    color: inherit;
    transition: 0.3s;
  }
  .contact-item a:hover { color: var(--accent-red); }

  /* --- Bottom Bar --- */
  .footer-bottom {
    border-top: 1px solid rgba(0,0,0,0.08);
    padding-top: 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .copyright {
    font-size: 14px;
    font-weight: 500;
    opacity: 0.9;
  }

  .payment-icons-wrap {
    display: flex;
    gap: 12px;
    align-items: center;
  }
  
  .payment-icons-wrap img {
    height: 20px;
    width: auto;
  }

  /* --- Responsive --- */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 30px;
    }
    .footer-column:first-child { grid-column: span 3; }
  }

  @media (max-width: 768px) {
    .footer-grid {
      display: flex;
      flex-direction: column;
      text-align: center;
    }
    .footer-logo, .social-wrapper, .contact-item {
      align-items: center;
      justify-content: center;
    }
    .footer-bottom {
      flex-direction: column-reverse;
      gap: 15px;
    }
  }
{%- endstyle -%}

