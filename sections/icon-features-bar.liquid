{%- style -%}
  .custom-features-bar {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding }}px 0;
    width: 100%;
  }
  
  .features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .features-flex {
    display: flex;
    justify-content: {{ section.settings.alignment }};
    align-items: center;
    flex-wrap: wrap;
    gap: {{ section.settings.gap }}px;
  }
  
  .feature-box {
    display: flex;
    align-items: center;
    gap: 15px;
    flex: 1;
    min-width: 250px;
    justify-content: {{ section.settings.box_alignment }};
  }
  
  .feature-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: calc({{ section.settings.icon_size }}px * 0.6);
    color: {{ section.settings.icon_color }};
  }
  
  .feature-info {
    text-align: left;
  }
  
  .feature-info h4 {
    margin: 0;
    font-family: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    line-height: 1.2;
  }
  
  .feature-info p {
    margin: 3px 0 0 0;
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .features-flex {
      flex-direction: column;
      gap: 30px;
    }
    .feature-box {
      justify-content: flex-start;
      width: 100%;
    }
  }
{%- endstyle -%}

<section class="custom-features-bar">
  <div class="features-container">
    <div class="features-flex">
      
      <!-- Feature 1 -->
      <div class="feature-box">
        <div class="feature-icon">
          <i class="{{ section.settings.icon1 }}"></i>
        </div>
        <div class="feature-info">
          <h4>{{ section.settings.heading1 }}</h4>
          <p>{{ section.settings.text1 }}</p>
        </div>
      </div>
      
      <!-- Feature 2 -->
      <div class="feature-box">
        <div class="feature-icon">
          <i class="{{ section.settings.icon2 }}"></i>
        </div>
        <div class="feature-info">
          <h4>{{ section.settings.heading2 }}</h4>
          <p>{{ section.settings.text2 }}</p>
        </div>
      </div>
      
      <!-- Feature 3 -->
      <div class="feature-box">
        <div class="feature-icon">
          <i class="{{ section.settings.icon3 }}"></i>
        </div>
        <div class="feature-info">
          <h4>{{ section.settings.heading3 }}</h4>
          <p>{{ section.settings.text3 }}</p>
        </div>
      </div>

    </div>
  </div>
</section>

