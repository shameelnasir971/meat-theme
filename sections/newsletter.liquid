{% comment %}
  Custom Dynamic Newsletter Section - Fixed Schema
{% endcomment %}

{%- style -%}
  /* Import Requested Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Questrial&family=Oswald:wght@400;500;700&family=Poppins:wght@300;400;500;600&display=swap');

  .section-{{ section.id }} {
    /* --- Dynamic Variables --- */
    --section-bg: {{ section.settings.section_bg }};
    --overlay-color: {{ section.settings.overlay_color }};
    /* Fixed: Changed ID to bypass schema error */
    --overlay-opacity: {{ section.settings.overlay_opacity_pct | divided_by: 100.0 }};
    
    --h-color: {{ section.settings.heading_color }};
    --t-color: {{ section.settings.text_color }};
    
    --h-font: {{ section.settings.heading_font_family }};
    --b-font: {{ section.settings.body_font_family }};
    
    --h-size: {{ section.settings.heading_size }}px;
    --h-size-mob: {{ section.settings.heading_size_mob }}px;
    --desc-size: {{ section.settings.desc_size }}px;
    --desc-size-mob: {{ section.settings.desc_size_mob }}px;
    
    --input-bg: {{ section.settings.input_bg_color }};
    --input-text: {{ section.settings.input_text_color }};
    --input-border: {{ section.settings.input_border_color }};
    
    --btn-bg: {{ section.settings.btn_bg_color }};
    --btn-text: {{ section.settings.btn_text_color }};
    --btn-hover-bg: {{ section.settings.btn_hover_bg_color }};
    --btn-hover-text: {{ section.settings.btn_hover_text_color }};
    
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: var(--section-bg);
    font-family: var(--b-font);
  }

  .news-container-{{ section.id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .newsletter-box-{{ section.id }} {
    position: relative;
    width: 100%;
    min-height: 450px;
    border-radius: 30px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 1600 }}');
    {% else %}
      background-image: url('https://images.unsplash.com/photo-1603048588665-791ca8aea617?q=80&w=1600&auto=format&fit=crop');
    {% endif %}
    
    background-size: cover;
    background-position: center;
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
  }

  /* Overlay */
  .newsletter-box-{{ section.id }}::before {
    content: "";
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background-color: var(--overlay-color);
    opacity: var(--overlay-opacity);
    z-index: 1;
  }

  .news-content-{{ section.id }} {
    width: 100%;
    max-width: 700px;
    padding: 40px 20px;
    z-index: 2;
    position: relative;
    
    /* Animation */
    {% if section.settings.animation_type == 'fade-up' %}
      animation: fadeInUp 1s ease-out forwards;
      opacity: 0;
    {% elsif section.settings.animation_type == 'zoom-in' %}
      animation: zoomIn 0.8s ease-out forwards;
      opacity: 0;
    {% endif %}
  }

  .news-title-{{ section.id }} {
    font-family: var(--h-font);
    font-size: var(--h-size);
    font-weight: 700;
    margin-bottom: 15px;
    text-transform: uppercase;
    color: var(--h-color);
    line-height: 1.1;
    letter-spacing: 1px;
  }

  .news-desc-{{ section.id }} {
    font-family: var(--b-font);
    font-size: var(--desc-size);
    margin-bottom: 35px;
    opacity: 0.95;
    color: var(--t-color);
    line-height: 1.6;
  }

  /* Form Styling */
  .news-form-{{ section.id }} {
    display: flex;
    gap: 15px;
    max-width: 550px;
    margin: 0 auto;
  }

  .news-input-{{ section.id }} {
    flex: 1;
    background: var(--input-bg);
    border: 1px solid var(--input-border);
    border-radius: 8px;
    padding: 14px 20px;
    color: var(--input-text);
    font-family: var(--b-font);
    font-size: 16px;
    outline: none;
    transition: 0.3s;
  }
  
  .news-input-{{ section.id }}:focus {
    border-color: var(--btn-bg);
    box-shadow: 0 0 10px rgba(255,255,255,0.2);
  }
  
  .news-input-{{ section.id }}::placeholder {
    color: var(--input-text);
    opacity: 0.7;
  }

  .news-btn-{{ section.id }} {
    background-color: var(--btn-bg);
    color: var(--btn-text);
    border: 1px solid var(--btn-bg);
    padding: 14px 35px;
    border-radius: 8px;
    font-family: var(--h-font);
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .news-btn-{{ section.id }}:hover {
    background-color: var(--btn-hover-bg);
    color: var(--btn-hover-text);
    border-color: var(--btn-hover-bg);
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  }

  /* Animations */
  @keyframes fadeInUp { from { opacity: 0; transform: translateY(40px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes zoomIn { from { opacity: 0; transform: scale(0.9); } to { opacity: 1; transform: scale(1); } }

  @media (max-width: 768px) {
    .news-form-{{ section.id }} {
      flex-direction: column;
    }
    .newsletter-box-{{ section.id }} {
      min-height: auto;
      border-radius: 20px;
    }
    .news-title-{{ section.id }} { font-size: var(--h-size-mob); }
    .news-desc-{{ section.id }} { font-size: var(--desc-size-mob); }
    .news-btn-{{ section.id }} { width: 100%; }
  }
{%- endstyle -%}

<section class="section-{{ section.id }}">
  <div class="news-container-{{ section.id }}">
    <div class="newsletter-box-{{ section.id }}">
      <div class="news-content-{{ section.id }}">
        
        <h2 class="news-title-{{ section.id }}">{{ section.settings.heading }}</h2>
        <div class="news-desc-{{ section.id }}">
          {{ section.settings.subheading }}
        </div>

        {% form 'customer', class: 'news-form-container' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="news-form-{{ section.id }}">
            <input 
              type="email" 
              name="contact[email]" 
              class="news-input-{{ section.id }}" 
              placeholder="{{ section.settings.input_placeholder }}" 
              required
            >
            <button type="submit" class="news-btn-{{ section.id }}">
              {{ section.settings.button_text }}
            </button>
          </div>
          
          {%- if form.posted_successfully? -%}
            <p style="color: #fff; margin-top: 15px; font-weight: 500;">Thanks for subscribing!</p>
          {%- endif -%}
        {% endform %}

      </div>
    </div>
  </div>
</section>

{% schema %}
