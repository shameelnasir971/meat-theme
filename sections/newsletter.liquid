    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 0, "max": 100, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 0, "max": 100, "default": 60, "unit": "px" }
  ],
  "presets": [
    {
      "name": "Custom Newsletter Pro"
    }
  ]
}
{% endschema %}