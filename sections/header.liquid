{% schema %}
{
  "name": "Custom Header Pro",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Select Menu",
      "default": "main-menu"
    },
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "MEAT SHOP"
    },
    {
      "type": "range",
      "id": "logo_size",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo Icon Size",
      "default": 50
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Menu/Icon Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "scrolled_bg",
      "label": "Scrolled Background Color",
      "default": "#d32f2f" 
    }
  ],
  "presets": [
    {
      "name": "Custom Header Pro"
    }
  ]
}
{% endschema %}

<!-- External Resources -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="header-wrapper-pro">
  <header class="header-main-pro" id="headerSticky">
    <div class="header-inner-wrap">
      
      <!-- LEFT: NAVIGATION -->
      <nav class="nav-left-pro">
        <div class="mobile-menu-trigger" id="openMobileMenu">
          <i class="fa-solid fa-bars-staggered"></i>
        </div>
        <ul class="menu-list">
          {% for link in section.settings.main_menu.links %}
            <li class="menu-item">
              <a href="{{ link.url }}" class="link-pro">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <!-- CENTER: LOGO -->
      <div class="logo-center-pro">
        <a href="{{ routes.root_url }}" class="logo-link-pro">
          <img src="https://cdn-icons-png.flaticon.com/512/1046/1046769.png" alt="Logo" class="meat-logo-icon" style="width: {{ section.settings.logo_size }}px;">
          <h1 class="meat-logo-text">{{ section.settings.logo_text }}</h1>
        </a>
      </div>

      <!-- RIGHT: ICONS -->
      <div class="icons-right-pro">
        <a href="{{ routes.search_url }}" class="icon-btn"><i class="fa-solid fa-magnifying-glass"></i></a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="icon-btn hide-mob"><i class="fa-regular fa-user"></i></a>
        {% endif %}
        <a href="{{ routes.cart_url }}" class="icon-btn cart-wrap">
          <i class="fa-solid fa-bag-shopping"></i>
          <span class="cart-count-badge">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </header>
</div>

<!-- MOBILE DRAWER -->
<div class="mobile-overlay-pro" id="mobileOverlay"></div>
<aside class="mobile-drawer-pro" id="mobileDrawer">
  <div class="drawer-header">
    <span>MENU</span>
    <i class="fa-solid fa-xmark" id="closeMobileMenu"></i>
  </div>
  <ul class="drawer-links">
    {% for link in section.settings.main_menu.links %}
      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
    {% endfor %}
  </ul>
</aside>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@700&family=Inter:wght@400;500;600&display=swap');

  /* Wrapper to prevent jumping when becoming fixed */
  .header-wrapper-pro {
    width: 100%;
    position: absolute; /* Default state: overlay on top bar/hero */
    top: auto;
    z-index: 1000;
  }

  .header-main-pro {
    width: 100%;
    padding: 20px 0;
    background: transparent !important; /* Force transparent at top */
    transition: background 0.4s ease, padding 0.3s ease, transform 0.3s ease;
    font-family: 'Inter', sans-serif;
  }

  /* SCROLLED STATE: BACKGROUND RED */
  .header-main-pro.is-scrolled {
    position: fixed;
    top: 0;
    left: 0;
    background-color: {{ section.settings.scrolled_bg }} !important; /* Set to Red in settings */
    padding: 10px 0;
    box-shadow: 0 4px 15px rgba(0,0,0,0.3);
  }

  /* Admin bar handling */
  .shopify-admin-bar .header-main-pro.is-scrolled {
    top: 40px;
  }

  .header-inner-wrap {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
  }

  /* Navigation */
  .menu-list { display: flex; list-style: none; gap: 25px; margin: 0; padding: 0; }
  .link-pro { 
    color: {{ section.settings.text_color }}; 
    text-decoration: none; 
    font-size: 15px; 
    font-weight: 600; 
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Logo */
  .logo-link-pro { 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    text-decoration: none;
    margin-top: -5px;
  }
  .meat-logo-icon { margin-bottom: 5px; filter: drop-shadow(0px 2px 4px rgba(0,0,0,0.3)); }
  .meat-logo-text { 
    font-family: 'Oswald', sans-serif; 
    color: {{ section.settings.text_color }}; 
    font-size: 26px; 
    font-weight: 700; 
    text-transform: uppercase; 
    margin: 0; 
    line-height: 1; 
  }

  /* Icons */
  .icons-right-pro { display: flex; gap: 20px; justify-content: flex-end; align-items: center; }
  .icon-btn { color: {{ section.settings.text_color }}; text-decoration: none; font-size: 20px; }
  .cart-wrap { position: relative; }
  .cart-count-badge { 
    position: absolute; 
    top: -8px; 
    right: -10px; 
    background: #000; 
    color: #fff; 
    font-size: 10px; 
    width: 18px; 
    height: 18px; 
    border-radius: 50%; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    font-weight: 700; 
  }

  .mobile-menu-trigger { display: none; color: #fff; font-size: 22px; cursor: pointer; }

  @media (max-width: 991px) {
    .menu-list { display: none; }
    .mobile-menu-trigger { display: block; }
    .header-inner-wrap { grid-template-columns: auto 1fr auto; padding: 0 20px; }
    .meat-logo-text { font-size: 20px; }
  }

  /* Mobile Drawer */
  .mobile-drawer-pro { position: fixed; top: 0; left: -310px; width: 300px; height: 100vh; background: #111; z-index: 10001; transition: 0.4s; padding: 30px; }
  .mobile-drawer-pro.active { left: 0; }
  .mobile-overlay-pro { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 10000; display: none; }
  .drawer-header { display: flex; justify-content: space-between; color: #fff; font-weight: bold; margin-bottom: 20px; }
  .drawer-links { list-style: none; padding: 0; }
  .drawer-links li { margin-bottom: 15px; }
  .drawer-links a { color: #fff; text-decoration: none; font-size: 18px; text-transform: uppercase; }
</style>

<script>
  (function() {
    const header = document.getElementById('headerSticky');
    const openBtn = document.getElementById('openMobileMenu');
    const closeBtn = document.getElementById('closeMobileMenu');
    const drawer = document.getElementById('mobileDrawer');
    const overlay = document.getElementById('mobileOverlay');

    window.addEventListener('scroll', () => {
      // Jab 50px se zyada scroll ho to red background aye
      if (window.scrollY > 50) {
        header.classList.add('is-scrolled');
      } else {
        header.classList.remove('is-scrolled');
      }
    });

    const toggleMenu = (state) => {
      drawer.classList.toggle('active', state);
      overlay.style.display = state ? 'block' : 'none';
      document.body.style.overflow = state ? 'hidden' : '';
    };

    if(openBtn) openBtn.onclick = () => toggleMenu(true);
    if(closeBtn) closeBtn.onclick = () => toggleMenu(false);
    if(overlay) overlay.onclick = () => toggleMenu(false);
  })();
</script>