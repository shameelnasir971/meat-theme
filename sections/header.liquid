{% schema %}
{
  "name": "Custom Header Pro",
  "settings": [
    {
      "type": "header",
      "content": "Main Layout Settings"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Select Menu"
    },
    {
      "type": "range",
      "id": "nav_font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Nav Font Size",
      "default": 15
    },
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "MEAT SHOP"
    },
    {
      "type": "range",
      "id": "logo_size",
      "min": 30,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Logo Width (Top)",
      "default": 60
    },
    {
      "type": "range",
      "id": "logo_size_scrolled",
      "min": 20,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Logo Width (Scrolled)",
      "default": 50
    },
    {
      "type": "header",
      "content": "Color Settings (Top/Static State)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Nav Link Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "hover_color",
      "label": "Global Hover Color",
      "default": "#e21e1e"
    },
    {
      "type": "header",
      "content": "Color Settings (Scrolled State)"
    },
    {
      "type": "color",
      "id": "scrolled_bg",
      "label": "Scrolled Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "scrolled_text",
      "label": "Scrolled Nav Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "scrolled_icon_color",
      "label": "Scrolled Icon Color",
      "default": "#1a1a1a"
    },
    {
      "type": "range",
      "id": "scrolled_padding",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Scrolled Vertical Padding",
      "default": 12
    },
    {
      "type": "header",
      "content": "Dropdown Customization"
    },
    {
      "type": "color",
      "id": "drop_bg",
      "label": "Dropdown Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "drop_text",
      "label": "Dropdown Link Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "drop_hover_bg",
      "label": "Dropdown Link Hover BG",
      "default": "#f8f8f8"
    },
    {
      "type": "range",
      "id": "drop_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Dropdown Corner Radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Icon Settings"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 14,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Icon Size",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "enable_hover_anim",
      "label": "Enable Icon Hover Animation",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Custom Header Pro"
    }
  ]
}
{% endschema %}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="header-wrapper-pro {% unless template.name == 'index' %}header-static-white{% endunless %}">
  <header class="header-main-pro {% unless template.name == 'index' %}is-scrolled{% endunless %}" id="headerSticky">
    <div class="header-inner-wrap container-pro">
      
      <!-- LOGO: Left -->
      <div class="logo-section-pro">
        <a href="{{ routes.root_url }}" class="logo-box-pro">
          {% if section.settings.logo_image != blank %}
            <img src="{{ section.settings.logo_image | image_url: width: 400 }}" alt="{{ shop.name }}" class="logo-img-pro">
          {% else %}
            <img src="https://cdn-icons-png.flaticon.com/512/1046/1046769.png" alt="Meat Icon" class="logo-img-pro fallback-icon">
          {% endif %}
          <span class="logo-text-pro">{{ section.settings.logo_text }}</span>
        </a>
      </div>

      <!-- NAV: Center -->
      <nav class="nav-section-pro">
        <div class="mobile-menu-trigger" id="openMobileMenu">
          <i class="fa-solid fa-bars-staggered"></i>
        </div>
        <ul class="menu-list-pro">
          {% if section.settings.main_menu != blank %}
            {% for link in section.settings.main_menu.links %}
              <li class="menu-item-pro {% if link.links != blank %}has-dropdown-pro{% endif %}">
                <a href="{{ link.url }}" class="main-link-pro">
                  {{ link.title }}
                  {% if link.links != blank %}<i class="fa-solid fa-chevron-down drop-icon"></i>{% endif %}
                </a>
                {% if link.links != blank %}
                  <ul class="dropdown-menu-pro">
                    {% for childlink in link.links %}
                      <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          {% else %}
            <li class="menu-item-pro"><a href="/" class="main-link-pro">Home</a></li>
            <li class="menu-item-pro"><a href="/collections/all" class="main-link-pro">Shop</a></li>
            <li class="menu-item-pro has-dropdown-pro">
              <a href="#" class="main-link-pro">Category <i class="fa-solid fa-chevron-down drop-icon"></i></a>
              <ul class="dropdown-menu-pro">
                <li><a href="/collections">All Collections</a></li>
                <li><a href="/collections/beef">Fresh Beef</a></li>
              </ul>
            </li>
            <li class="menu-item-pro"><a href="/pages/contact" class="main-link-pro">Contact</a></li>
          {% endif %}
        </ul>
      </nav>

      <!-- ICONS: Right -->
      <div class="icons-section-pro">
        <a href="{{ routes.search_url }}" class="icon-link-pro"><i class="fa-solid fa-magnifying-glass"></i></a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="icon-link-pro hide-mob"><i class="fa-regular fa-user"></i></a>
        {% endif %}
        
        <!-- CART ICON (DESKTOP) - LINK TO CART PAGE -->
        <a href="{{ routes.cart_url }}" class="icon-link-pro cart-btn-pro">
          <i class="fa-solid fa-bag-shopping"></i>
          {% if cart.item_count > 0 %}
            <span class="cart-count-pro">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      </div>

    </div>
  </header>
</div>

<!-- Professional Mobile Drawer -->
<div class="mob-overlay-pro" id="mobOverlay"></div>
<aside class="mob-drawer-pro" id="mobDrawer">
  <div class="mob-drawer-head">
    <div class="mob-drawer-logo">
       <span class="logo-text-pro" style="color:#1a1a1a; font-size: 20px;">{{ section.settings.logo_text }}</span>
    </div>
    <i class="fa-solid fa-xmark" id="closeMobileMenu"></i>
  </div>
  
  <div class="mob-drawer-body">
    <ul class="mob-nav-list">
      {% if section.settings.main_menu != blank %}
        {% for link in section.settings.main_menu.links %}
          <li class="mob-item-pro">
            <div class="mob-link-row">
              <a href="{{ link.url }}" class="mob-main-link">{{ link.title }}</a>
              {% if link.links != blank %}
                <span class="mob-drop-trigger"><i class="fa-solid fa-chevron-down"></i></span>
              {% endif %}
            </div>
            {% if link.links != blank %}
              <ul class="mob-sub-list">
                {% for childlink in link.links %}
                  <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      {% else %}
        <li class="mob-item-pro"><a href="/" class="mob-main-link">Home</a></li>
        <li class="mob-item-pro"><a href="/collections/all" class="mob-main-link">Shop</a></li>
        <li class="mob-item-pro">
          <div class="mob-link-row">
            <span class="mob-main-link">Category</span>
            <span class="mob-drop-trigger"><i class="fa-solid fa-chevron-down"></i></span>
          </div>
          <ul class="mob-sub-list">
            <li><a href="/collections">All Collections</a></li>
            {% comment %} <li><a href="/collections/beef">Fresh Beef</a></li> {% endcomment %}
          </ul>
        </li>
        <li class="mob-item-pro"><a href="/pages/contact" class="mob-main-link">Contact</a></li>
      {% endif %}
    </ul>
  </div>

  <div class="mob-drawer-footer">
    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" class="mob-footer-link"><i class="fa-regular fa-user"></i> My Account</a>
    {% endif %}
    
    <!-- MOBILE CART LINK - LINK TO CART PAGE -->
    <a href="{{ routes.cart_url }}" class="mob-footer-link">
      <i class="fa-solid fa-bag-shopping"></i> Shopping Cart
    </a>
  </div>
</aside>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@700&family=Poppins:wght@400;500;600&display=swap');

  :root {
    --text-color: {{ section.settings.text_color }};
    --icon-color: {{ section.settings.icon_color }};
    --hover-red: {{ section.settings.hover_color }};
    --scrolled-bg: {{ section.settings.scrolled_bg }};
    --scrolled-text: {{ section.settings.scrolled_text }};
    --scrolled-icon: {{ section.settings.scrolled_icon_color }};
    
    --drop-bg: {{ section.settings.drop_bg }};
    --drop-text: {{ section.settings.drop_text }};
    --drop-hover-bg: {{ section.settings.drop_hover_bg }};
    --drop-radius: {{ section.settings.drop_radius }}px;
    
    --nav-size: {{ section.settings.nav_font_size }}px;
    --logo-top: {{ section.settings.logo_size }}px;
    --logo-scrolled: {{ section.settings.logo_size_scrolled }}px;
    --icon-size: {{ section.settings.icon_size }}px;
    --scroll-pad: {{ section.settings.scrolled_padding }}px;
  }

  .header-wrapper-pro { width: 100%; position: relative; z-index: 1000; }
  .header-static-white { background: var(--scrolled-bg); border-bottom: 1px solid #f0f0f0; }
  
  .header-main-pro { 
    width: 100%; 
    padding: 25px 0; 
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1); 
    font-family: 'Poppins', sans-serif;
  }

  {% if template.name == 'index' %}
  .header-main-pro:not(.is-scrolled) { position: absolute; top: 0; width: 100%; }
  {% endif %}

  .container-pro { max-width: 1400px; margin: 0 auto; padding: 0 40px; }

  .header-inner-wrap { 
    display: grid; 
    grid-template-columns: 280px 1fr 280px; 
    align-items: center; 
  }

  .logo-section-pro { display: flex; justify-content: flex-start; }
  .nav-section-pro { display: flex; justify-content: center; }
  .icons-section-pro { display: flex; justify-content: flex-end; gap: 25px; align-items: center; }

  /* SCROLLED STATE */
  .header-main-pro.is-scrolled {
    position: fixed; top: 0; left: 0;
    background: var(--scrolled-bg) !important;
    padding: var(--scroll-pad) 0;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  }

  .header-main-pro.is-scrolled .logo-text-pro,
  .header-main-pro.is-scrolled .main-link-pro,
  .header-main-pro.is-scrolled .drop-icon,
  .header-main-pro.is-scrolled .mobile-menu-trigger {
    color: var(--scrolled-text) !important;
  }
  
  .header-main-pro.is-scrolled .icon-link-pro {
    color: var(--scrolled-icon) !important;
  }

  .header-main-pro.is-scrolled .logo-img-pro { width: var(--logo-scrolled) !important; }

  /* Logo */
  .logo-box-pro { display: flex; align-items: center; gap: 12px; text-decoration: none; }
  .logo-img-pro { width: var(--logo-top); transition: 0.4s; height: auto; object-fit: contain; }
  .logo-text-pro { 
    font-family: 'Oswald', sans-serif; 
    color: var(--text-color); 
    font-size: 24px; 
    text-transform: uppercase; 
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  /* Nav Links Desktop */
  .menu-list-pro { display: flex; list-style: none; gap: 30px; margin: 0; padding: 0; }
  .main-link-pro { 
    color: var(--text-color); 
    text-decoration: none; 
    font-size: var(--nav-size); 
    font-weight: 500; 
    transition: 0.3s; 
    display: flex; 
    align-items: center; 
    gap: 6px;
    position: relative;
  }
  .main-link-pro:hover { color: var(--hover-red) !important; }
  .main-link-pro::after {
    content: ''; position: absolute; bottom: -5px; left: 0; width: 0; height: 2px;
    background: var(--hover-red); transition: 0.3s;
  }
  .main-link-pro:hover::after { width: 100%; }

  /* Desktop Dropdown Styles */
  .has-dropdown-pro { position: relative; }
  .dropdown-menu-pro {
    position: absolute; top: 120%; left: 50%; transform: translateX(-50%) translateY(10px);
    background: var(--drop-bg); min-width: 220px; list-style: none; padding: 15px 0;
    border-radius: var(--drop-radius); box-shadow: 0 12px 35px rgba(0,0,0,0.1);
    opacity: 0; visibility: hidden; transition: 0.3s;
  }
  .has-dropdown-pro:hover .dropdown-menu-pro { opacity: 1; visibility: visible; transform: translateX(-50%) translateY(0); }
  .dropdown-menu-pro a { 
    display: block; padding: 12px 25px; color: var(--drop-text); 
    text-decoration: none; font-size: 14px; transition: 0.2s; 
  }
  .dropdown-menu-pro a:hover { 
    background: var(--drop-hover-bg); 
    color: var(--hover-red); 
    padding-left: 32px; 
  }

  /* Icon Styles */
  .icon-link-pro { 
    color: var(--icon-color); 
    font-size: var(--icon-size); 
    text-decoration: none; 
    transition: 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); 
    position: relative;
    display: inline-flex;
    cursor: pointer;
  }
  .icon-link-pro:hover { 
    color: var(--hover-red) !important; 
    {% if section.settings.enable_hover_anim %} transform: scale(1.15) translateY(-2px); {% endif %}
  }

  .cart-count-pro {
    position: absolute; top: -8px; right: -10px;
    background: var(--hover-red); color: #fff;
    font-size: 10px; width: 18px; height: 18px;
    border-radius: 50%; display: flex; align-items: center; justify-content: center;
    font-weight: 600;
  }

  /* Responsive / Mobile Styles */
  .mobile-menu-trigger { display: none !important; font-size: 24px; color: var(--text-color); cursor: pointer; }

  @media (max-width: 1100px) {
    .menu-list-pro { display: none !important; }
    .mobile-menu-trigger { display: block !important; }
    .header-inner-wrap { grid-template-columns: 1fr auto 1fr; }
    .logo-section-pro { order: 2; justify-content: center; }
    .nav-section-pro { order: 1; justify-content: flex-start; }
    .icons-section-pro { order: 3; }
    .logo-text-pro { display: none; }
    .container-pro { padding: 0 20px; }
  }

  /* PROFESSIONAL SIDEBAR (DRAWER) STYLES */
  .mob-drawer-pro { 
    position: fixed; top: 0; left: -100%; width: 320px; height: 100vh; 
    background: #ffffff; z-index: 1001; transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1); 
    box-shadow: 10px 0 30px rgba(0,0,0,0.1); display: flex; flex-direction: column;
  }
  .mob-drawer-pro.active { left: 0; }
  .mob-overlay-pro { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; display: none; backdrop-filter: blur(3px); }
  
  .mob-drawer-head { 
    padding: 25px; border-bottom: 1px solid #f0f0f0; 
    display: flex; justify-content: space-between; align-items: center;
  }
  .mob-drawer-head i { font-size: 22px; color: #1a1a1a; cursor: pointer; }

  .mob-drawer-body { flex: 1; overflow-y: auto; padding: 20px 0; }
  
  .mob-nav-list { list-style: none; padding: 0; margin: 0; }
  .mob-item-pro { border-bottom: 1px solid #f7f7f7; }
  .mob-link-row { display: flex; justify-content: space-between; align-items: center; padding: 0 25px; }
  
  .mob-main-link { 
    display: block; padding: 16px 0; color: #1a1a1a; 
    text-decoration: none; font-weight: 500; font-size: 16px; flex: 1;
  }
  .mob-drop-trigger { padding: 16px 0 16px 20px; cursor: pointer; color: #999; transition: 0.3s; }
  .mob-drop-trigger.is-open { transform: rotate(180deg); color: var(--hover-red); }

  .mob-sub-list { 
    list-style: none; padding: 0; margin: 0; background: #fcfcfc; 
    max-height: 0; overflow: hidden; transition: max-height 0.3s ease-out;
  }
  .mob-sub-list.show { max-height: 1000px; }
  .mob-sub-list a { 
    display: block; padding: 12px 25px 12px 40px; color: #555; 
    text-decoration: none; font-size: 15px; border-bottom: 1px solid #f3f3f3;
  }

  .mob-drawer-footer { padding: 25px; border-top: 1px solid #f0f0f0; background: #fafafa; }
  .mob-footer-link { display: flex; align-items: center; gap: 12px; color: #1a1a1a; text-decoration: none; font-size: 15px; padding: 12px 0; font-weight: 500; }
  .mob-footer-link i { color: var(--hover-red); font-size: 18px; }

</style>

<script>
  (function() {
    const header = document.getElementById('headerSticky');
    const isHome = "{{ template.name }}" === "index";

    // Scroll Sticky Logic
    window.addEventListener('scroll', () => {
      if(window.scrollY > 60) {
        if(header) header.classList.add('is-scrolled');
      } else {
        if(isHome && header) header.classList.remove('is-scrolled');
      }
    });

    // Sidebar Open/Close
    const openBtn = document.getElementById('openMobileMenu');
    const closeBtn = document.getElementById('closeMobileMenu');
    const drawer = document.getElementById('mobDrawer');
    const overlay = document.getElementById('mobOverlay');

    if(openBtn && drawer && overlay) {
      openBtn.onclick = () => {
        drawer.classList.add('active');
        overlay.style.display = 'block';
      }
    }
    
    if(closeBtn && drawer && overlay) {
      closeBtn.onclick = () => {
        drawer.classList.remove('active');
        overlay.style.display = 'none';
      }
    }
    
    if(overlay && drawer) {
      overlay.onclick = () => { 
        drawer.classList.remove('active');
        overlay.style.display = 'none';
      }
    }

    // Sidebar Dropdown Accordion Logic
    const dropTriggers = document.querySelectorAll('.mob-drop-trigger');
    dropTriggers.forEach(trigger => {
      trigger.onclick = function() {
        const subList = this.parentElement.nextElementSibling;
        if(subList) {
          this.classList.toggle('is-open');
          subList.classList.toggle('show');
        }
      }
    });

  })();
</script>