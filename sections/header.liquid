{% schema %}
{
  "name": "Custom Header Pro",
  "settings": [
    { "type": "header", "content": "Global Font Settings" },
    {
      "type": "select",
      "id": "font_family_main",
      "label": "Main Nav Font Family",
      "options": [
        { "value": "'Poppins', sans-serif", "label": "Poppins" },
        { "value": "'Questrial', sans-serif", "label": "Questrial" },
        { "value": "'Oswald', sans-serif", "label": "Oswald" },
        { "value": "sans-serif", "label": "System Sans-Serif" }
      ],
      "default": "'Poppins', sans-serif"
    },
    {
      "type": "select",
      "id": "font_family_headings",
      "label": "Logo & Headings Font Family",
      "options": [
        { "value": "'Oswald', sans-serif", "label": "Oswald" },
        { "value": "'Questrial', sans-serif", "label": "Questrial" },
        { "value": "'Poppins', sans-serif", "label": "Poppins" }
      ],
      "default": "'Oswald', sans-serif"
    },
    { "type": "header", "content": "Main Layout Settings" },
    { "type": "link_list", "id": "main_menu", "label": "Select Menu" },
    { "type": "range", "id": "nav_font_size", "label": "Nav Font Size", "default": 15, "min": 12, "max": 25, "step": 1, "unit": "px" },
    { "type": "range", "id": "nav_font_weight", "label": "Nav Font Weight", "default": 500, "min": 300, "max": 800, "step": 100 },
    { "type": "range", "id": "header_padding_top", "label": "Header Padding (Desktop)", "default": 25, "min": 10, "max": 50, "step": 1, "unit": "px" },

    { "type": "header", "content": "Logo Settings" },
    { "type": "image_picker", "id": "logo_image", "label": "Logo Image" },
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "MEAT SHOP" },
    { "type": "range", "id": "logo_text_size", "label": "Logo Text Size", "default": 24, "min": 16, "max": 40, "step": 1, "unit": "px" },
    { "type": "range", "id": "logo_size", "label": "Logo Width (Top)", "default": 60, "min": 30, "max": 300, "step": 5, "unit": "px" },
    { "type": "range", "id": "logo_size_scrolled", "label": "Logo Width (Scrolled)", "default": 50, "min": 20, "max": 200, "step": 5, "unit": "px" },

    { "type": "header", "content": "Color Settings (Top State)" },
    { "type": "color", "id": "text_color", "label": "Nav Link Color", "default": "#ffffff" },
    { "type": "color", "id": "icon_color", "label": "Icon Color", "default": "#ffffff" },
    { "type": "color", "id": "hover_color", "label": "Global Hover Color", "default": "#e21e1e" },
    
    { "type": "header", "content": "Color Settings (Scrolled State)" },
    { "type": "color", "id": "scrolled_bg", "label": "Scrolled Background", "default": "#ffffff" },
    { "type": "color", "id": "scrolled_text", "label": "Scrolled Nav Color", "default": "#1a1a1a" },
    { "type": "color", "id": "scrolled_icon_color", "label": "Scrolled Icon Color", "default": "#1a1a1a" },
    { "type": "range", "id": "scrolled_padding", "label": "Scrolled Vertical Padding", "default": 12, "min": 5, "max": 30, "step": 1, "unit": "px" },

    { "type": "header", "content": "Dropdown Customization" },
    { "type": "color", "id": "drop_bg", "label": "Dropdown Background", "default": "#ffffff" },
    { "type": "color", "id": "drop_text", "label": "Dropdown Link Color", "default": "#333333" },
    { "type": "color", "id": "drop_hover_bg", "label": "Dropdown Link Hover BG", "default": "#f8f8f8" },
    { "type": "range", "id": "drop_radius", "label": "Dropdown Corner Radius", "default": 8, "min": 0, "max": 20, "step": 2, "unit": "px" },

    { "type": "header", "content": "Icon Settings (Upload Custom Icons)" },
    { "type": "paragraph", "content": "Leave blank to use default Font-Awesome icons" },
    { "type": "image_picker", "id": "custom_search_icon", "label": "Custom Search Icon" },
    { "type": "image_picker", "id": "custom_user_icon", "label": "Custom User Icon" },
    { "type": "image_picker", "id": "custom_cart_icon", "label": "Custom Cart Icon" },
    { "type": "range", "id": "icon_size", "label": "Icon Size", "default": 20, "min": 14, "max": 40, "step": 1, "unit": "px" },
    { "type": "checkbox", "id": "enable_hover_anim", "label": "Enable Icon Hover Animation", "default": true },
    { "type": "text", "id": "anim_speed", "label": "Animation Speed (e.g. 0.4s)", "default": "0.4s" },
    
    { "type": "header", "content": "Mobile Sidebar Styling" },
    { "type": "color", "id": "mob_bg_color", "label": "Drawer Background", "default": "#ffffff" },
    { "type": "color", "id": "mob_text_color", "label": "Drawer Text Color", "default": "#1a1a1a" },
    { "type": "color", "id": "mob_border_color", "label": "Divider Color", "default": "#f0f0f0" },
    { "type": "color", "id": "mob_icon_color", "label": "Drawer Icon Color", "default": "#555555" },
    { "type": "range", "id": "mob_logo_width", "label": "Mobile Drawer Logo Width", "min": 50, "max": 200, "step": 5, "default": 100, "unit": "px" }
  ],
  "presets": [ { "name": "Custom Header Pro" } ]
}
{% endschema %}

<!-- Resources -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Poppins:wght@400;500;600;700&family=Questrial&display=swap');
</style>

<!-- SEARCH OVERLAY -->
<div class="search-overlay-pro" id="searchOverlay">
  <div class="search-container-pro">
    <button class="search-close-btn" id="searchCloseBtn"><i class="fa-solid fa-xmark"></i></button>
    <h3 class="search-title">Search Our Store</h3>
    <form action="/search" method="get" role="search" class="search-form-pro">
      <div class="input-group-pro">
        <input type="text" name="q" id="SearchInputPro" placeholder="What are you looking for?" class="search-input-field" autocomplete="off">
        <button type="submit" class="search-submit-btn">
           {% if section.settings.custom_search_icon != blank %}
             <img src="{{ section.settings.custom_search_icon | image_url: width: 50 }}" style="width:{{ section.settings.icon_size }}px">
           {% else %}
             <i class="fa-solid fa-magnifying-glass"></i>
           {% endif %}
        </button>
      </div>
    </form>
  </div>
</div>

<div class="header-wrapper-pro {% unless template.name == 'index' %}header-static-white{% endunless %}">
  <header class="header-main-pro {% unless template.name == 'index' %}is-transparent{% else %}is-transparent{% endunless %}" id="headerSticky">
    <div class="header-inner-wrap container-pro">
      
      <!-- LOGO -->
      <div class="logo-section-pro">
        <a href="{{ routes.root_url }}" class="logo-box-pro">
          {% if section.settings.logo_image != blank %}
            <img src="{{ section.settings.logo_image | image_url: width: 400 }}" alt="{{ shop.name }}" class="logo-img-pro">
          {% else %}
            <img src="https://cdn-icons-png.flaticon.com/512/1046/1046769.png" alt="Meat Icon" class="logo-img-pro fallback-icon">
          {% endif %}
          <span class="logo-text-pro">{{ section.settings.logo_text }}</span>
        </a>
      </div>

      <!-- NAV -->
      <nav class="nav-section-pro">
        <div class="mobile-menu-trigger" id="openMobileMenu">
          <i class="fa-solid fa-bars-staggered"></i>
        </div>
        <ul class="menu-list-pro">
          {% if section.settings.main_menu != blank %}
            {% for link in section.settings.main_menu.links %}
              <li class="menu-item-pro {% if link.links != blank %}has-dropdown-pro{% endif %}">
                <a href="{{ link.url }}" class="main-link-pro">
                  {{ link.title }}
                  {% if link.links != blank %}<i class="fa-solid fa-chevron-down drop-icon"></i>{% endif %}
                </a>
                {% if link.links != blank %}
                  <ul class="dropdown-menu-pro">
                    {% for childlink in link.links %}
                      <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          {% else %}
            <li class="menu-item-pro"><a href="/" class="main-link-pro">Home</a></li>
            <li class="menu-item-pro"><a href="/pages/about" class="main-link-pro">About Us</a></li>
            <li class="menu-item-pro"><a href="/collections" class="main-link-pro">Shop</a></li>
            <li class="menu-item-pro has-dropdown-pro">
              <a href="#" class="main-link-pro">Category <i class="fa-solid fa-chevron-down drop-icon"></i></a>
              <ul class="dropdown-menu-pro">
                <li><a href="/collections"> Collections</a></li>
              </ul>
            </li>
            <li class="menu-item-pro"><a href="/pages/contact" class="main-link-pro">Contact</a></li>
          {% endif %}
        </ul>
      </nav>

      <!-- ICONS -->
      <div class="icons-section-pro">
        <a href="#" class="icon-link-pro" id="searchTriggerBtn">
          {% if section.settings.custom_search_icon != blank %}
            <img src="{{ section.settings.custom_search_icon | image_url: width: 100 }}" class="custom-icon-img">
          {% else %}
            <i class="fa-solid fa-magnifying-glass"></i>
          {% endif %}
        </a>
        
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="icon-link-pro hide-mob">
            {% if section.settings.custom_user_icon != blank %}
               <img src="{{ section.settings.custom_user_icon | image_url: width: 100 }}" class="custom-icon-img">
            {% else %}
               <i class="fa-regular fa-user"></i>
            {% endif %}
          </a>
        {% endif %}
        
        <!-- CART ICON -->
        <a href="{{ routes.cart_url }}" class="icon-link-pro cart-btn-pro">
          {% if section.settings.custom_cart_icon != blank %}
             <img src="{{ section.settings.custom_cart_icon | image_url: width: 100 }}" class="custom-icon-img">
          {% else %}
             <i class="fa-solid fa-bag-shopping"></i>
          {% endif %}
          <span class="cart-count-pro" style="{% if cart.item_count == 0 %}display:none;{% else %}display:flex;{% endif %}">
            {{ cart.item_count }}
          </span>
        </a>
      </div>

    </div>
  </header>
</div>

<!-- Mobile Drawer -->
<div class="mob-overlay-pro" id="mobOverlay"></div>
<aside class="mob-drawer-pro" id="mobDrawer">
  <div class="mob-drawer-head">
    <div class="mob-drawer-logo">
       {% if section.settings.logo_image != blank %}
          <img src="{{ section.settings.logo_image | image_url: width: 400 }}" alt="{{ shop.name }}" style="width: {{ section.settings.mob_logo_width }}px; height: auto;">
       {% else %}
          <span class="logo-text-pro" style="color:{{ section.settings.mob_text_color }}; font-size: 24px;">{{ section.settings.logo_text }}</span>
       {% endif %}
    </div>
    <div class="mob-close-btn" id="closeMobileMenu">
      <i class="fa-solid fa-xmark"></i>
    </div>
  </div>
  
  <div class="mob-drawer-body">
    <ul class="mob-nav-list">
      {% if section.settings.main_menu != blank %}
        {% for link in section.settings.main_menu.links %}
          <li class="mob-item-pro">
            <div class="mob-link-row">
              <a href="{{ link.url }}" class="mob-main-link">{{ link.title }}</a>
              {% if link.links != blank %}
                <span class="mob-drop-trigger"><i class="fa-solid fa-chevron-down"></i></span>
              {% endif %}
            </div>
            {% if link.links != blank %}
              <ul class="mob-sub-list">
                {% for childlink in link.links %}
                  <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      {% endif %}
    </ul>
  </div>
</aside>

<style>
  :root {
    --main-font: {{ section.settings.font_family_main }};
    --heading-font: {{ section.settings.font_family_headings }};
    --text-color: {{ section.settings.text_color }};
    --icon-color: {{ section.settings.icon_color }};
    --hover-red: {{ section.settings.hover_color }};
    --scrolled-bg: {{ section.settings.scrolled_bg }};
    --scrolled-text: {{ section.settings.scrolled_text }};
    --scrolled-icon: {{ section.settings.scrolled_icon_color }};
    --drop-bg: {{ section.settings.drop_bg }};
    --drop-text: {{ section.settings.drop_text }};
    --drop-hover-bg: {{ section.settings.drop_hover_bg }};
    --drop-radius: {{ section.settings.drop_radius }}px;
    --nav-size: {{ section.settings.nav_font_size }}px;
    --nav-weight: {{ section.settings.nav_font_weight }};
    --logo-top: {{ section.settings.logo_size }}px;
    --logo-scrolled: {{ section.settings.logo_size_scrolled }}px;
    --logo-text-size: {{ section.settings.logo_text_size }}px;
    --icon-size: {{ section.settings.icon_size }}px;
    --header-pad: {{ section.settings.header_padding_top }}px;
    --scroll-pad: {{ section.settings.scrolled_padding }}px;
    --mob-bg: {{ section.settings.mob_bg_color }};
    --mob-text: {{ section.settings.mob_text_color }};
    --mob-border: {{ section.settings.mob_border_color }};
    --mob-icon: {{ section.settings.mob_icon_color }};
    --anim-speed: {{ section.settings.anim_speed }};
  }

  .header-wrapper-pro { width: 100%; position: relative; z-index: 1000; }
  
  .header-main-pro { 
    width: 100%; 
    padding: var(--header-pad) 0; 
    transition: all var(--anim-speed) cubic-bezier(0.4, 0, 0.2, 1); 
    font-family: var(--main-font);
    position: relative; 
    background-color: transparent; 
  }

  /* Transparent State Colors */
  .header-main-pro .logo-text-pro,
  .header-main-pro .main-link-pro,
  .header-main-pro .drop-icon,
  .header-main-pro .mobile-menu-trigger {
    color: var(--text-color) !important;
  }
  .header-main-pro .icon-link-pro {
    color: var(--icon-color) !important;
  }

  /* Fix for Announcement Bar Overlap */
  {% if template.name == 'index' %}
    .header-main-pro:not(.is-scrolled) { 
      position: absolute; 
      top: auto;
      left: 0; 
    }
  {% endif %}

  /* NEW: White header on other pages without overlap */
  .header-static-white .header-main-pro:not(.is-scrolled) {
    background-color: var(--scrolled-bg) !important;
    position: relative;
  }
  .header-static-white .header-main-pro:not(.is-scrolled) .logo-text-pro,
  .header-static-white .header-main-pro:not(.is-scrolled) .main-link-pro,
  .header-static-white .header-main-pro:not(.is-scrolled) .drop-icon,
  .header-static-white .header-main-pro:not(.is-scrolled) .mobile-menu-trigger {
    color: var(--scrolled-text) !important;
  }
  .header-static-white .header-main-pro:not(.is-scrolled) .icon-link-pro {
    color: var(--scrolled-icon) !important;
  }

  /* Scrolled State */
  .header-main-pro.is-scrolled {
    position: fixed; 
    top: 0; 
    left: 0;
    padding: var(--scroll-pad) 0;
    background-color: var(--scrolled-bg) !important;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  }

  .header-main-pro.is-scrolled .logo-text-pro,
  .header-main-pro.is-scrolled .main-link-pro,
  .header-main-pro.is-scrolled .drop-icon,
  .header-main-pro.is-scrolled .mobile-menu-trigger {
    color: var(--scrolled-text) !important;
  }
  .header-main-pro.is-scrolled .icon-link-pro {
    color: var(--scrolled-icon) !important;
  }
  
  /* Desktop Layout */
  .container-pro { max-width: 1400px; margin: 0 auto; padding: 0 40px; }
  .header-inner-wrap { 
    display: grid; 
    grid-template-columns: 280px 1fr 280px; 
    align-items: center; 
  }

  .logo-section-pro { display: flex; justify-content: flex-start; }
  .nav-section-pro { display: flex; justify-content: center; }
  .icons-section-pro { display: flex; justify-content: flex-end; gap: 25px; align-items: center; }

  .logo-box-pro { display: flex; align-items: center; gap: 12px; text-decoration: none; }
  .logo-img-pro { width: var(--logo-top); transition: var(--anim-speed); height: auto; object-fit: contain; }
  .header-main-pro.is-scrolled .logo-img-pro { width: var(--logo-scrolled) !important; }

  .logo-text-pro { 
    font-family: var(--heading-font); 
    font-size: var(--logo-text-size); 
    text-transform: uppercase; 
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  /* Navigation Links */
  .menu-list-pro { display: flex; list-style: none; gap: 30px; margin: 0; padding: 0; }
  .main-link-pro { 
    text-decoration: none; 
    font-size: var(--nav-size); 
    font-weight: var(--nav-weight); 
    transition: 0.3s; 
    display: flex; 
    align-items: center; 
    gap: 6px;
    position: relative;
  }
  .main-link-pro:hover { color: var(--hover-red) !important; }
  .main-link-pro::after {
    content: ''; position: absolute; bottom: -5px; left: 0; width: 0; height: 2px;
    background: var(--hover-red); transition: 0.3s;
  }
  .main-link-pro:hover::after { width: 100%; }

  /* Dropdown Menu */
  .has-dropdown-pro { position: relative; }
  .dropdown-menu-pro {
    position: absolute; top: 120%; left: 50%; transform: translateX(-50%) translateY(10px);
    background: var(--drop-bg); min-width: 220px; list-style: none; padding: 15px 0;
    border-radius: var(--drop-radius); box-shadow: 0 12px 35px rgba(0,0,0,0.1);
    opacity: 0; visibility: hidden; transition: 0.3s; z-index: 1002;
  }
  .has-dropdown-pro:hover .dropdown-menu-pro { opacity: 1; visibility: visible; transform: translateX(-50%) translateY(0); }
  .dropdown-menu-pro a { 
    display: block; padding: 12px 25px; color: var(--drop-text); 
    text-decoration: none; font-size: 14px; transition: 0.2s; 
    font-family: var(--main-font);
  }
  .dropdown-menu-pro a:hover { background: var(--drop-hover-bg); color: var(--hover-red); padding-left: 32px; }

  /* Icons */
  .icon-link-pro { 
    text-decoration: none; 
    transition: 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); 
    position: relative;
    display: inline-flex;
    cursor: pointer;
    font-size: var(--icon-size);
  }
  .custom-icon-img { width: var(--icon-size); height: var(--icon-size); object-fit: contain; }
  .icon-link-pro:hover { 
    color: var(--hover-red) !important; 
    {% if section.settings.enable_hover_anim %} transform: scale(1.15) translateY(-2px); {% endif %}
  }

  .cart-count-pro {
    position: absolute; top: -8px; right: -10px;
    background: var(--hover-red); color: #fff;
    font-size: 10px; width: 18px; height: 18px;
    border-radius: 50%; display: flex; align-items: center; justify-content: center;
    font-weight: 600;
  }

  /* Mobile Responsive */
  .mobile-menu-trigger { display: none !important; font-size: 24px; cursor: pointer; }

  @media (max-width: 1100px) {
    .menu-list-pro { display: none !important; }
    .mobile-menu-trigger { display: block !important; }
    .header-inner-wrap { grid-template-columns: 1fr auto 1fr; }
    .logo-section-pro { order: 2; justify-content: center; }
    .nav-section-pro { order: 1; justify-content: flex-start; }
    .icons-section-pro { order: 3; }
    .logo-text-pro { display: none; }
    .container-pro { padding: 0 20px; }
  }

  /* Mobile Drawer */
  .mob-drawer-pro { 
    position: fixed; top: 0; left: -100%; width: 320px; height: 100vh; 
    background: var(--mob-bg); z-index: 1005; transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1); 
    box-shadow: 10px 0 30px rgba(0,0,0,0.1); display: flex; flex-direction: column;
    font-family: var(--main-font);
  }
  .mob-drawer-pro.active { left: 0; }
  .mob-overlay-pro { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1004; display: none; backdrop-filter: blur(3px); }
  
  .mob-drawer-head { padding: 20px 25px; border-bottom: 1px solid var(--mob-border); display: flex; justify-content: space-between; align-items: center; }
  .mob-close-btn { font-size: 20px; cursor: pointer; color: var(--mob-text); }
  
  .mob-drawer-body { flex: 1; overflow-y: auto; padding: 10px 0; }
  .mob-nav-list { list-style: none; padding: 0; margin: 0; }
  .mob-item-pro { border-bottom: 1px solid var(--mob-border); }
  .mob-link-row { display: flex; justify-content: space-between; align-items: center; padding: 18px 25px; }
  
  .mob-main-link { color: var(--mob-text); text-decoration: none; font-weight: 600; font-size: 16px; font-family: var(--heading-font); text-transform: uppercase; }
  .mob-drop-trigger { cursor: pointer; color: var(--mob-icon); transition: 0.3s; }
  .mob-drop-trigger.is-open { transform: rotate(180deg); }
  .mob-sub-list { list-style: none; padding: 0; background: rgba(0,0,0,0.03); max-height: 0; overflow: hidden; transition: max-height 0.4s ease; }
  .mob-sub-list.show { max-height: 1000px; }
  .mob-sub-list a { display: block; padding: 12px 40px; color: var(--mob-text); text-decoration: none; font-size: 15px; }

  /* Search Overlay */
  .search-overlay-pro { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255, 255, 255, 0.98); z-index: 2000; display: flex; align-items: center; justify-content: center; opacity: 0; visibility: hidden; transition: 0.3s; }
  .search-overlay-pro.active { opacity: 1; visibility: visible; }
  .search-container-pro { width: 100%; max-width: 800px; padding: 0 20px; text-align: center; }
  .search-title { font-family: var(--heading-font); font-size: 32px; margin-bottom: 30px; text-transform: uppercase; }
  .input-group-pro { display: flex; border-bottom: 2px solid #1a1a1a; padding-bottom: 10px; }
  .search-input-field { width: 100%; border: none; background: transparent; font-size: 24px; outline: none; font-family: var(--main-font); }
  .search-submit-btn { background: none; border: none; font-size: 24px; cursor: pointer; }
</style>

<script>
  (function() {
    const header = document.getElementById('headerSticky');

    // Handle Scroll
    window.addEventListener('scroll', () => {
      if(window.scrollY > 60) {
        if(header) header.classList.add('is-scrolled');
      } else {
        if(header) header.classList.remove('is-scrolled');
      }
    });

    // Mobile Menu
    const openBtn = document.getElementById('openMobileMenu');
    const closeBtn = document.getElementById('closeMobileMenu');
    const drawer = document.getElementById('mobDrawer');
    const overlay = document.getElementById('mobOverlay');

    if(openBtn) {
      openBtn.onclick = () => {
        drawer.classList.add('active');
        overlay.style.display = 'block';
      }
    }
    if(closeBtn) {
      closeBtn.onclick = () => {
        drawer.classList.remove('active');
        overlay.style.display = 'none';
      }
    }
    if(overlay) {
      overlay.onclick = () => { 
        drawer.classList.remove('active');
        overlay.style.display = 'none';
      }
    }

    // Mobile Dropdowns
    const dropTriggers = document.querySelectorAll('.mob-drop-trigger');
    dropTriggers.forEach(trigger => {
      trigger.onclick = function() {
        const subList = this.closest('.mob-item-pro').querySelector('.mob-sub-list');
        if(subList) {
          this.classList.toggle('is-open');
          subList.classList.toggle('show');
        }
      }
    });

    // Search Overlay
    const searchTrigger = document.getElementById('searchTriggerBtn');
    const searchOverlay = document.getElementById('searchOverlay');
    const searchClose = document.getElementById('searchCloseBtn');
    if(searchTrigger) {
      searchTrigger.onclick = (e) => { e.preventDefault(); searchOverlay.classList.add('active'); };
    }
    if(searchClose) {
      searchClose.onclick = () => searchOverlay.classList.remove('active');
    }
  })();
</script>