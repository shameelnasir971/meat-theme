{% schema %}
{
  "name": "Custom Header Pro",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Select Menu",
      "info": "Agar menu select nahi karenge toh default Home, Shop, About, Category, Contact dikhega."
    },
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image",
      "info": "Upload your custom logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "MEAT SHOP"
    },
    {
      "type": "range",
      "id": "logo_size",
      "min": 30,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Logo Image/Icon Width",
      "default": 50
    },
    {
      "type": "header",
      "content": "Main Menu Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Menu/Icon Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "hover_color",
      "label": "Menu Hover Color",
      "default": "#ffcc00"
    },
    {
      "type": "color",
      "id": "scrolled_bg",
      "label": "Scrolled Background Color",
      "default": "#d32f2f"
    },
    {
      "type": "header",
      "content": "Dropdown Customization"
    },
    {
      "type": "image_picker",
      "id": "custom_dropdown_icon",
      "label": "Upload Dropdown Icon (PNG/SVG)",
      "info": "Upload a small icon for dropdown"
    },
    {
      "type": "range",
      "id": "icon_width",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Icon Width",
      "default": 12
    },
    {
      "type": "color",
      "id": "dropdown_bg",
      "label": "Dropdown Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "dropdown_link_color",
      "label": "Dropdown Link Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "dropdown_hover_bg",
      "label": "Dropdown Hover Background",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "dropdown_hover_text",
      "label": "Dropdown Hover Text",
      "default": "#d32f2f"
    },
    {
      "type": "range",
      "id": "dropdown_font_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Dropdown Font Size",
      "default": 14
    },
    {
      "type": "select",
      "id": "hover_animation",
      "label": "Hover Effect",
      "options": [
        { "value": "fade", "label": "Fade In" },
        { "value": "slide", "label": "Slide Down" },
        { "value": "zoom", "label": "Zoom In" }
      ],
      "default": "slide"
    }
  ],
  "presets": [
    {
      "name": "Custom Header Pro"
    }
  ]
}
{% endschema %}

<!-- External Resources -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="header-wrapper-pro">
  <header class="header-main-pro" id="headerSticky">
    <div class="header-inner-wrap">
      
      <!-- LEFT: NAVIGATION -->
      <nav class="nav-left-pro">
        <div class="mobile-menu-trigger" id="openMobileMenu">
          <i class="fa-solid fa-bars-staggered"></i>
        </div>
        <ul class="menu-list">
          {% if section.settings.main_menu != blank %}
            {% for link in section.settings.main_menu.links %}
              <li class="menu-item {% if link.links != blank %}has-dropdown{% endif %}">
                <div class="link-container">
                  <a href="{{ link.url }}" class="link-pro">{{ link.title }}</a>
                  {% if link.links != blank %}
                    <span class="dropdown-trigger-icon">
                      {% if section.settings.custom_dropdown_icon != blank %}
                        {% assign drop_icon_url = section.settings.custom_dropdown_icon | image_url: width: 50 %}
                        <img src="{{ drop_icon_url }}" style="width: {{ section.settings.icon_width }}px; height: auto;" alt="icon">
                      {% else %}
                        <i class="fa-solid fa-chevron-down default-arrow"></i>
                      {% endif %}
                    </span>
                  {% endif %}
                </div>
                {% if link.links != blank %}
                  <ul class="dropdown-menu effect-{{ section.settings.hover_animation }}">
                    {% for childlink in link.links %}
                      <li class="dropdown-item"><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          {% else %}
            <!-- Default Static Menus -->
            <li class="menu-item"><div class="link-container"><a href="/" class="link-pro">Home</a></div></li>
            <li class="menu-item"><div class="link-container"><a href="/collections/all" class="link-pro">Shop</a></div></li>
            <li class="menu-item"><div class="link-container"><a href="/pages/about-us" class="link-pro">About</a></div></li>
            <li class="menu-item has-dropdown">
              <div class="link-container">
                <a href="#" class="link-pro">Category</a>
                <span class="dropdown-trigger-icon">
                   {% if section.settings.custom_dropdown_icon != blank %}
                      {% assign drop_icon_url_static = section.settings.custom_dropdown_icon | image_url: width: 50 %}
                      <img src="{{ drop_icon_url_static }}" style="width: {{ section.settings.icon_width }}px; height: auto;" alt="icon">
                   {% else %}
                      <i class="fa-solid fa-chevron-down default-arrow"></i>
                   {% endif %}
                </span>
              </div>
              <ul class="dropdown-menu effect-{{ section.settings.hover_animation }}">
                <li class="dropdown-item"><a href="/collections">All Categories</a></li>
                <li class="dropdown-item"><a href="#">Fresh Items</a></li>
              </ul>
            </li>
            <li class="menu-item"><div class="link-container"><a href="/pages/contact" class="link-pro">Contact</a></div></li>
          {% endif %}
        </ul>
      </nav>

      <!-- CENTER: LOGO -->
      <div class="logo-center-pro">
        <a href="{{ routes.root_url }}" class="logo-link-pro">
          {% if section.settings.logo_image != blank %}
            {% assign logo_img_url = section.settings.logo_image | image_url: width: 400 %}
            <img src="{{ logo_img_url }}" alt="{{ shop.name }}" style="width: {{ section.settings.logo_size }}px; height: auto;">
          {% else %}
            <img src="https://cdn-icons-png.flaticon.com/512/1046/1046769.png" alt="Default Logo" style="width: {{ section.settings.logo_size }}px; height: auto;">
          {% endif %}
          <h1 class="meat-logo-text">{{ section.settings.logo_text }}</h1>
        </a>
      </div>

      <!-- RIGHT: ICONS -->
      <div class="icons-right-pro">
        <a href="{{ routes.search_url }}" class="icon-btn"><i class="fa-solid fa-magnifying-glass"></i></a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="icon-btn hide-mob"><i class="fa-regular fa-user"></i></a>
        {% endif %}
        <a href="{{ routes.cart_url }}" class="icon-btn cart-wrap">
          <i class="fa-solid fa-bag-shopping"></i>
          <span class="cart-count-badge">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </header>
</div>

<!-- MOBILE DRAWER -->
<div class="mobile-overlay-pro" id="mobileOverlay"></div>
<aside class="mobile-drawer-pro" id="mobileDrawer">
  <div class="drawer-header">
    <span>MENU</span>
    <i class="fa-solid fa-xmark" id="closeMobileMenu"></i>
  </div>
  <ul class="drawer-links">
    {% if section.settings.main_menu != blank %}
      {% for link in section.settings.main_menu.links %}
        <li class="mob-item">
          <div class="mob-link-wrap">
            <a href="{{ link.url }}">{{ link.title }}</a>
            {% if link.links != blank %}<i class="fa-solid fa-plus mob-drop-toggle"></i>{% endif %}
          </div>
          {% if link.links != blank %}
            <ul class="mobile-child-links">
              {% for childlink in link.links %}
                <li><a href="{{ childlink.url }}">{{ childlink.title }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    {% else %}
      <li class="mob-item"><div class="mob-link-wrap"><a href="/">Home</a></div></li>
      <li class="mob-item"><div class="mob-link-wrap"><a href="/collections/all">Shop</a></div></li>
      <li class="mob-item"><div class="mob-link-wrap"><a href="#">Category</a><i class="fa-solid fa-plus mob-drop-toggle"></i></div></li>
      <li class="mob-item"><div class="mob-link-wrap"><a href="/pages/contact">Contact</a></div></li>
    {% endif %}
  </ul>
</aside>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@700&family=Inter:wght@400;500;600&display=swap');

  :root {
    --header-text: {{ section.settings.text_color }};
    --header-hover: {{ section.settings.hover_color }};
    --drop-bg: {{ section.settings.dropdown_bg }};
    --drop-text: {{ section.settings.dropdown_link_color }};
    --drop-hover-bg: {{ section.settings.dropdown_hover_bg }};
    --drop-hover-text: {{ section.settings.dropdown_hover_text }};
    --drop-font-size: {{ section.settings.dropdown_font_size }}px;
  }

  .header-wrapper-pro { width: 100%; position: absolute; z-index: 1000; }
  .header-main-pro { width: 100%; padding: 20px 0; background: transparent; transition: 0.4s; font-family: 'Inter', sans-serif; }
  .header-main-pro.is-scrolled { position: fixed; top: 0; background: {{ section.settings.scrolled_bg }} !important; padding: 10px 0; box-shadow: 0 4px 15px rgba(0,0,0,0.2); }

  .header-inner-wrap { max-width: 1440px; margin: 0 auto; padding: 0 40px; display: grid; grid-template-columns: 1fr auto 1fr; align-items: center; }

  .menu-list { display: flex; list-style: none; gap: 25px; margin: 0; padding: 0; }
  .menu-item { position: relative; }
  .link-container { display: flex; align-items: center; gap: 5px; cursor: pointer; padding: 10px 0; }
  
  .link-pro { color: var(--header-text); text-decoration: none; font-size: 15px; font-weight: 500; transition: 0.3s; }
  .link-pro:hover { color: var(--header-hover); }

  .dropdown-trigger-icon { display: flex; align-items: center; color: var(--header-text); transition: 0.3s; }
  .default-arrow { font-size: 10px; }
  .menu-item:hover .dropdown-trigger-icon { transform: rotate(180deg); color: var(--header-hover); }

  .dropdown-menu {
    position: absolute; top: 100%; left: 0; background: var(--drop-bg);
    min-width: 220px; list-style: none; padding: 10px 0;
    opacity: 0; visibility: hidden; z-index: 1001; border-radius: 4px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1); transition: all 0.3s ease;
  }

  .effect-fade { transform: translateY(0); }
  .effect-slide { transform: translateY(15px); }
  .effect-zoom { transform: scale(0.9); }

  .menu-item:hover .dropdown-menu { opacity: 1; visibility: visible; transform: translateY(0) scale(1); }

  .dropdown-item a {
    display: block; padding: 12px 20px; color: var(--drop-text);
    text-decoration: none; font-size: var(--drop-font-size); transition: 0.3s;
  }
  .dropdown-item a:hover { background: var(--drop-hover-bg); color: var(--drop-hover-text); padding-left: 25px; }

  .logo-link-pro { display: flex; flex-direction: column; align-items: center; text-decoration: none; }
  .meat-logo-text { font-family: 'Oswald', sans-serif; color: var(--header-text); font-size: 24px; text-transform: uppercase; margin: 0; }
  .icons-right-pro { display: flex; gap: 20px; justify-content: flex-end; align-items: center; }
  .icon-btn { color: var(--header-text); font-size: 20px; text-decoration: none; transition: 0.3s; }
  .icon-btn:hover { color: var(--header-hover); }
  .cart-wrap { position: relative; }
  .cart-count-badge { position: absolute; top: -8px; right: -10px; background: #000; color: #fff; font-size: 10px; width: 18px; height: 18px; border-radius: 50%; display: flex; align-items: center; justify-content: center; }

  .mobile-menu-trigger { display: none; color: var(--header-text); font-size: 22px; cursor: pointer; }
  @media (max-width: 991px) {
    .menu-list { display: none; }
    .mobile-menu-trigger { display: block; }
    .header-inner-wrap { grid-template-columns: auto 1fr auto; padding: 0 20px; }
  }

  .mobile-drawer-pro { position: fixed; top: 0; left: -100%; width: 300px; height: 100vh; background: #111; z-index: 10001; transition: 0.4s; padding: 30px; }
  .mobile-drawer-pro.active { left: 0; }
  .mobile-overlay-pro { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 10000; display: none; }
  
  .drawer-links { list-style: none; padding: 0; }
  .mob-item { border-bottom: 1px solid #333; padding: 15px 0; }
  .mob-link-wrap { display: flex; justify-content: space-between; align-items: center; }
  .mob-link-wrap a { color: #fff; text-decoration: none; font-size: 16px; }
  .mob-drop-toggle { color: #fff; cursor: pointer; padding: 5px; }
  .mobile-child-links { list-style: none; padding-left: 15px; display: none; margin-top: 10px; }
  .mobile-child-links a { color: #ccc; font-size: 14px; text-decoration: none; display: block; padding: 5px 0; }
</style>

<script>
  (function() {
    const header = document.getElementById('headerSticky');
    const openBtn = document.getElementById('openMobileMenu');
    const closeBtn = document.getElementById('closeMobileMenu');
    const drawer = document.getElementById('mobileDrawer');
    const overlay = document.getElementById('mobileOverlay');

    window.addEventListener('scroll', () => {
      if(header) header.classList.toggle('is-scrolled', window.scrollY > 50);
    });

    const toggleMenu = (state) => {
      if(drawer) drawer.classList.toggle('active', state);
      if(overlay) overlay.style.display = state ? 'block' : 'none';
      document.body.style.overflow = state ? 'hidden' : '';
    };

    if(openBtn) openBtn.onclick = () => toggleMenu(true);
    if(closeBtn) closeBtn.onclick = () => toggleMenu(false);
    if(overlay) overlay.onclick = () => toggleMenu(false);

    document.querySelectorAll('.mob-drop-toggle').forEach(toggle => {
      toggle.onclick = function() {
        const submenu = this.parentElement.nextElementSibling;
        if(submenu) {
          const isOpen = submenu.style.display === 'block';
          submenu.style.display = isOpen ? 'none' : 'block';
          this.classList.toggle('fa-plus', isOpen);
          this.classList.toggle('fa-minus', !isOpen);
        }
      };
    });
  })();
</script>