{%- style -%}
/* Import Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Questrial&family=Oswald:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap');

.collage-hero-{{ section.id }} {
  /* --- Dynamic Variables --- */
  --bg-color: {{ section.settings.bg_color }};
  --heading-color: {{ section.settings.heading_color }};
  --text-color: {{ section.settings.text_color }};
  --shape-color: {{ section.settings.shape_color }};
  
  --heading-font: {{ section.settings.heading_font_family }};
  --body-font: {{ section.settings.body_font_family }};

  --heading-size: {{ section.settings.title_size }}px;
  --heading-size-mob: {{ section.settings.title_size_mob }}px;
  --desc-size: {{ section.settings.desc_size }}px;
  --desc-size-mob: {{ section.settings.desc_size_mob }}px;

  --btn1-bg: {{ section.settings.btn_primary_bg }};
  --btn1-text: {{ section.settings.btn_primary_text }};
  --btn1-hover-bg: {{ section.settings.btn_primary_hover_bg }};
  --btn1-hover-text: {{ section.settings.btn_primary_hover_text }};

  --btn2-text: {{ section.settings.btn_secondary_color }};
  --btn2-border: {{ section.settings.btn_secondary_border }};
  --btn2-hover-bg: {{ section.settings.btn_secondary_hover_bg }};
  --btn2-hover-text: {{ section.settings.btn_secondary_hover_text }};

  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  background-color: var(--bg-color);
  overflow: hidden;
  font-family: var(--body-font);
}

.ch-container {
  max-width: {{ section.settings.container_width }}px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  align-items: center;
  gap: {{ section.settings.content_gap }}px;
}

/* --- LEFT CONTENT --- */
.ch-content {
  flex: 1;
  z-index: 5;
  text-align: {{ section.settings.text_alignment }};

  /* Entrance Animation */
  {% if section.settings.animation_type == 'fade-up' %}
    animation: fadeInUp 1s ease-out forwards;
    opacity: 0;
  {% elsif section.settings.animation_type == 'slide-right' %}
    animation: slideRight 1s ease-out forwards;
    opacity: 0;
  {% elsif section.settings.animation_type == 'zoom-in' %}
    animation: zoomIn 0.8s ease-out forwards;
    opacity: 0;
  {% endif %}
}

.ch-content h2 {
  font-family: var(--heading-font);
  font-size: var(--heading-size);
  font-weight: {{ section.settings.heading_weight }};
  color: var(--heading-color);
  line-height: {{ section.settings.heading_line_height }};
  margin: 0 0 20px 0;
  letter-spacing: {{ section.settings.heading_spacing }}px;
  text-transform: uppercase;
}

.ch-content p {
  font-family: var(--body-font);
  font-size: var(--desc-size);
  line-height: 1.6;
  color: var(--text-color);
  margin-bottom: 35px;
  max-width: 550px;
  {% if section.settings.text_alignment == 'center' %}
    margin-left: auto;
    margin-right: auto;
  {% endif %}
}

.ch-btn-group {
  display: flex;
  gap: 15px;
  justify-content: {% if section.settings.text_alignment == 'center' %}center{% elsif section.settings.text_alignment == 'right' %}flex-end{% else %}flex-start{% endif %};
}

.ch-btn {
  padding: {{ section.settings.btn_padding_v }}px {{ section.settings.btn_padding_h }}px;
  border-radius: {{ section.settings.btn_radius }}px;
  font-weight: 600;
  font-size: 15px;
  text-decoration: none;
  transition: all 0.3s ease;
  cursor: pointer;
  font-family: var(--heading-font);
  letter-spacing: 0.5px;
}

/* Primary Button */
.ch-btn-primary {
  background-color: var(--btn1-bg);
  color: var(--btn1-text);
  border: 1px solid var(--btn1-bg);
}
.ch-btn-primary:hover {
  background-color: var(--btn1-hover-bg);
  color: var(--btn1-hover-text);
  border-color: var(--btn1-hover-bg);
  transform: translateY(-3px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.15);
}

/* Secondary Button */
.ch-btn-secondary {
  background: transparent;
  color: var(--btn2-text);
  border: 2px solid var(--btn2-border);
}
.ch-btn-secondary:hover {
  background-color: var(--btn2-hover-bg);
  color: var(--btn2-hover-text);
  border-color: var(--btn2-hover-bg);
  transform: translateY(-3px);
}

/* --- RIGHT SIDE IMAGE COLLAGE --- */
.ch-image-stack {
  flex: 1.2;
  position: relative;
  height: {{ section.settings.collage_height }}px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

  {% if section.settings.animation_type != 'none' %}
    animation: fadeIn 1.5s ease-out forwards;
    opacity: 0;
    animation-delay: 0.3s;
  {% endif %}
}

/* 1. Colored Shape  */
.ch-shape-bg {
  position: absolute;
  width: 85%;
  height: 75%;
  background: var(--shape-color);
  border-radius: {{ section.settings.shape_radius }}px;
  z-index: 1;
  box-shadow: 0 10px 40px rgba(0,0,0,0.08);
}

/* 2. Left Image */
.ch-img-left {
  position: absolute;
  width: 42%;
  height: 40%;
  left: 0;
  top: 35%;
  transform: translateY(-50%);
  border-radius: 15px;
  overflow: hidden;
  z-index: 2;
  box-shadow: 0 15px 35px rgba(0,0,0,0.15);
  border: {{ section.settings.img_border_width }}px solid #fff;
  transition: transform 0.5s ease;
}

/* 3. Right Image */
.ch-img-right {
  position: absolute;
  width: 38%;
  height: 35%;
  right: 0;
  top: 75%;
  transform: translateY(-50%);
  border-radius: 15px;
  overflow: hidden;
  z-index: 2;
  box-shadow: 0 15px 35px rgba(0,0,0,0.15);
  border: {{ section.settings.img_border_width }}px solid #fff;
  transition: transform 0.5s ease;
}

/* 4. MAIN VERTICAL IMAGE */
.ch-img-main {
  position: absolute;
  width: 50%;
  height: 90%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 25px;
  overflow: hidden;
  z-index: 10;
  box-shadow: 0 25px 50px rgba(0,0,0,0.25);
  border: {{ section.settings.img_border_width }}px solid #fff;
  transition: transform 0.5s ease;
}

.ch-image-stack img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Hover Effect */
{% if section.settings.enable_hover_zoom %}
  .ch-image-stack:hover .ch-img-main { transform: translate(-50%, -50%) scale(1.03); }
  .ch-image-stack:hover .ch-img-left { transform: translateY(-50%) translateX(-10px); }
  .ch-image-stack:hover .ch-img-right { transform: translateY(-50%) translateX(10px); }
{% endif %}

/* Animations Keyframes */
@keyframes fadeInUp { from { opacity: 0; transform: translateY(40px); } to { opacity: 1; transform: translateY(0); } }
@keyframes slideRight { from { opacity: 0; transform: translateX(-50px); } to { opacity: 1; transform: translateX(0); } }
@keyframes zoomIn { from { opacity: 0; transform: scale(0.9); } to { opacity: 1; transform: scale(1); } }
@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

/* --- RESPONSIVE --- */
@media (max-width: 1024px) {
  .ch-container { flex-direction: column; text-align: center; gap: 40px; }
  .ch-content { text-align: center; order: 2; }
  .ch-content p { margin-left: auto; margin-right: auto; }
  .ch-btn-group { justify-content: center; }
  .ch-image-stack { order: 1; height: 450px; max-width: 500px; }
}

@media (max-width: 768px) {
  .ch-content h2 { font-size: var(--heading-size-mob); }
  .ch-content p { font-size: var(--desc-size-mob); }
  .ch-image-stack { height: 380px; }
  .ch-img-main { width: 60%; }
}

@media (max-width: 480px) {
  .ch-btn-group { flex-direction: column; width: 100%; }
  .ch-btn { width: 100%; text-align: center; }
  .ch-img-left, .ch-img-right { display: none; }
  .ch-img-main { width: 85%; height: 95%; }
}
{%- endstyle -%}

<section class="collage-hero-{{ section.id }}">
  <div class="ch-container">
    
    <!-- Content Column -->
    <div class="ch-content">
      <h2>{{ section.settings.title | newline_to_br }}</h2>
      <p>{{ section.settings.desc }}</p>

      <div class="ch-btn-group">
        {% if section.settings.btn1_text != blank %}
          <a href="{{ section.settings.btn1_link }}" class="ch-btn ch-btn-primary">{{ section.settings.btn1_text }}</a>
        {% endif %}
        {% if section.settings.btn2_text != blank %}
          <a href="{{ section.settings.btn2_link }}" class="ch-btn ch-btn-secondary">{{ section.settings.btn2_text }}</a>
        {% endif %}
      </div>
    </div>

    <!-- Collage Column -->
    <div class="ch-image-stack">
      <div class="ch-shape-bg"></div>

      <div class="ch-img-left">
        {% if section.settings.image_left != blank %}
          <img src="{{ section.settings.image_left | img_url: '600x' }}" alt="{{ section.settings.image_left.alt }}" loading="lazy">
        {% else %}
          <img src="https://images.unsplash.com/photo-1607623814075-e51df1bdc82f?q=80&w=600&auto=format&fit=crop" alt="Meat Cut" loading="lazy">
        {% endif %}
      </div>

      <div class="ch-img-right">
        {% if section.settings.image_right != blank %}
          <img src="{{ section.settings.image_right | img_url: '600x' }}" alt="{{ section.settings.image_right.alt }}" loading="lazy">
        {% else %}
          <img src="https://images.unsplash.com/photo-1594179047519-f347310d3322?q=80&w=600&auto=format&fit=crop" alt="Preparation" loading="lazy">
        {% endif %}
      </div>

      <div class="ch-img-main">
        {% if section.settings.image_main != blank %}
          <img src="{{ section.settings.image_main | img_url: '800x' }}" alt="{{ section.settings.image_main.alt }}" loading="lazy">
        {% else %}
          <img src="https://images.unsplash.com/photo-1544025162-d76694265947?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Main Product" loading="lazy">
        {% endif %}
      </div>
    </div>

  </div>
</section>

