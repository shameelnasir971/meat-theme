{%- style -%}
  @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@700&family=Inter:wght@400;500;600&display=swap');

  .collage-hero-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    overflow: hidden;
    font-family: 'Inter', sans-serif;
  }

  .ch-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    gap: 60px; 
  }

  /* --- LEFT CONTENT --- */
  .ch-content {
    flex: 1;
    z-index: 5;
    text-align: {{ section.settings.text_alignment }};
  }

  .ch-content h2 {
    font-family: 'Oswald', sans-serif;
    font-size: {{ section.settings.title_size }}px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    line-height: 1.1;
    margin: 0 0 20px 0;
    letter-spacing: -0.5px;
    text-transform: uppercase;
  }

  .ch-content p {
    font-size: {{ section.settings.desc_size }}px;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin-bottom: 35px;
    max-width: 480px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ch-btn-group {
    display: flex;
    gap: 15px;
    justify-content: {{ section.settings.text_alignment }};
  }

  .ch-btn {
    padding: 15px 40px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 15px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  /* Primary Button */
  .ch-btn-primary {
    background-color: {{ section.settings.btn_primary_bg }};
    color: {{ section.settings.btn_primary_text }};
    border: 1px solid {{ section.settings.btn_primary_bg }};
  }
  .ch-btn-primary:hover {
    background-color: {{ section.settings.btn_primary_bg | color_darken: 10 }};
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.15);
  }

  /* Secondary Button */
  .ch-btn-secondary {
    background: transparent;
    color: {{ section.settings.btn_secondary_color }};
    border: 2px solid {{ section.settings.btn_secondary_border }};
  }
  .ch-btn-secondary:hover {
    background-color: {{ section.settings.btn_secondary_border }};
    color: #fff;
    transform: translateY(-3px);
  }

  /* --- RIGHT SIDE IMAGE COLLAGE --- */
  .ch-image-stack {
    flex: 1.2;
    position: relative;
    height: 550px; 
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* 1. Colored Shape  */
  .ch-shape-bg {
    position: absolute;
    width: 80%;
    height: 70%;
    background: {{ section.settings.shape_color }};
    border-radius: 30px;
    z-index: 1;
    box-shadow: 0 10px 40px rgba(0,0,0,0.08);
  }

  /* 2. Left Image */
  .ch-img-left {
    position: absolute;
    width: 42%;
    height: 38%;
    left: 2%;
    top: 35%;
    transform: translateY(-50%);
    border-radius: 15px;
    overflow: hidden;
    z-index: 2;
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    border: 4px solid #fff;
  }

  /* 3. Right Image */
  .ch-img-right {
    position: absolute;
    width: 38%;
    height: 35%;
    right: 2%;
    top: 75%;
    transform: translateY(-50%);
    border-radius: 15px;
    overflow: hidden;
    z-index: 2;
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    border: 4px solid #fff;
  }

  /* 4. MAIN VERTICAL IMAGE */
  .ch-img-main {
    position: absolute;
    width: 50%;
    height: 90%;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    border-radius: 25px;
    overflow: hidden;
    z-index: 10;
    box-shadow: 0 25px 50px rgba(0,0,0,0.25);
    border: 4px solid #fff; 
  }

  .ch-image-stack img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }
  
  /* Hover Effect */
  .ch-image-stack:hover .ch-img-main img {
    transform: scale(1.05);
  }

  /* --- RESPONSIVE DESIGN --- */
  @media (max-width: 1024px) {
    .ch-container { flex-direction: column; text-align: center; gap: 60px; }
    .ch-content { text-align: center; }
    .ch-content p { margin-left: auto; margin-right: auto; }
    .ch-btn-group { justify-content: center; }
    .ch-image-stack { height: 480px; max-width: 600px; }
  }

  @media (max-width: 768px) {
    .ch-content h2 { font-size: calc({{ section.settings.title_size }}px * 0.7); }
    .ch-image-stack { height: 400px; }
    .ch-shape-bg { width: 90%; }
    .ch-img-main { width: 55%; }
  }

  @media (max-width: 480px) {
    .ch-btn-group { flex-direction: column; width: 100%; }
    .ch-btn { width: 100%; text-align: center; }
    .ch-image-stack { height: 350px; }
    .ch-img-left, .ch-img-right { display: none; }
    .ch-img-main { width: 70%; height: 90%; }
  }
{%- endstyle -%}

<section class="collage-hero-{{ section.id }}">
  <div class="ch-container">
    
    <!-- Left Text Column -->
    <div class="ch-content">
      <h2>{{ section.settings.title | newline_to_br }}</h2>
      <p>{{ section.settings.desc }}</p>
      
      <div class="ch-btn-group">
        {% if section.settings.btn1_text != blank %}
          <a href="{{ section.settings.btn1_link | default: '#' }}" class="ch-btn ch-btn-primary">{{ section.settings.btn1_text }}</a>
        {% endif %}
        {% if section.settings.btn2_text != blank %}
          <a href="{{ section.settings.btn2_link | default: '#' }}" class="ch-btn ch-btn-secondary">{{ section.settings.btn2_text }}</a>
        {% endif %}
      </div>
    </div>

    <!-- Right Collage Column -->
    <div class="ch-image-stack">
      <div class="ch-shape-bg"></div>
      
      <!-- 2. Left Image -->
      <div class="ch-img-left">
        {% if section.settings.image_left != blank %}
          {{ section.settings.image_left | image_url: width: 600 | image_tag: loading: 'lazy' }}
        {% else %}
          <img src="https://images.unsplash.com/photo-1607623814075-e51df1bdc82f?q=80&w=600&auto=format&fit=crop" alt="Steak Cut">
        {% endif %}
      </div>

      <!-- 3. Right Image -->
      <div class="ch-img-right">
        {% if section.settings.image_right != blank %}
          {{ section.settings.image_right | image_url: width: 600 | image_tag: loading: 'lazy' }}
        {% else %}
          <img src="https://images.unsplash.com/photo-1594179047519-f347310d3322?q=80&w=600&auto=format&fit=crop" alt="Butcher Preparation">
        {% endif %}
      </div>

      <!-- 4. Main Vertical Image -->
      <div class="ch-img-main">
        {% if section.settings.image_main != blank %}
          {{ section.settings.image_main | image_url: width: 800 | image_tag: loading: 'lazy' }}
        {% else %}
          <img src="https://images.unsplash.com/photo-1544025162-d76694265947?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Premium Meat Display">
        {% endif %}
      </div>
    </div>

  </div>
</section>

