{% schema %}
{
  "name": "About Mission Banner",
  "settings": [
    { "type": "header", "content": "Layout & Background" },
    { "type": "image_picker", "id": "bg_image", "label": "Background Image" },
    { "type": "range", "id": "section_height", "label": "Desktop Height", "min": 300, "max": 800, "step": 10, "default": 450, "unit": "px" },
    { "type": "range", "id": "section_height_mob", "label": "Mobile Height", "min": 250, "max": 600, "step": 10, "default": 350, "unit": "px" },
    { "type": "color", "id": "overlay_color", "label": "Overlay Color", "default": "#000000" },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay Opacity", "min": 0, "max": 100, "step": 5, "default": 40, "unit": "%" },
    { "type": "select", "id": "text_alignment", "label": "Text Alignment", "options": [
      { "value": "left", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "right", "label": "Right" }
    ], "default": "left" },

    { "type": "header", "content": "Typography: Heading" },
    { "type": "text", "id": "heading", "label": "Heading Text", "default": "Our Mission" },
    { "type": "select", "id": "heading_font", "label": "Heading Font Family", "options": [
      { "value": "'Oswald', sans-serif", "label": "Oswald (Bold)" },
      { "value": "'Questrial', sans-serif", "label": "Questrial (Clean)" },
      { "value": "'Poppins', sans-serif", "label": "Poppins (Modern)" },
      { "value": "serif", "label": "Standard Serif" }
    ], "default": "'Oswald', sans-serif" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#ffffff" },
    { "type": "range", "id": "heading_size", "label": "Heading Size (Desktop)", "min": 20, "max": 100, "step": 1, "default": 48, "unit": "px" },
    { "type": "range", "id": "heading_size_mob", "label": "Heading Size (Mobile)", "min": 18, "max": 60, "step": 1, "default": 32, "unit": "px" },
    { "type": "range", "id": "heading_mb", "label": "Heading Bottom Margin", "min": 0, "max": 50, "step": 1, "default": 20, "unit": "px" },

    { "type": "header", "content": "Typography: Description" },
    { "type": "textarea", "id": "description", "label": "Description Text", "default": "To provide fresh, halal, and responsibly prepared meat while maintaining the highest standards of quality." },
    { "type": "select", "id": "desc_font", "label": "Description Font Family", "options": [
      { "value": "'Poppins', sans-serif", "label": "Poppins" },
      { "value": "'Questrial', sans-serif", "label": "Questrial" },
      { "value": "sans-serif", "label": "System Sans" }
    ], "default": "'Poppins', sans-serif" },
    { "type": "color", "id": "text_color", "label": "Description Color", "default": "#ffffff" },
    { "type": "range", "id": "desc_size", "label": "Description Size (Desktop)", "min": 12, "max": 30, "step": 1, "default": 18, "unit": "px" },
    { "type": "range", "id": "desc_size_mob", "label": "Description Size (Mobile)", "min": 12, "max": 24, "step": 1, "default": 16, "unit": "px" },

    { "type": "header", "content": "Animations" },
    { "type": "select", "id": "animation_type", "label": "Text Animation", "options": [
      { "value": "none", "label": "None" },
      { "value": "fade-up", "label": "Fade Up" },
      { "value": "fade-in", "label": "Fade In" },
      { "value": "slide-left", "label": "Slide from Left" }
    ], "default": "fade-up" },

    { "type": "header", "content": "Features Section (Optional)" },
    { "type": "checkbox", "id": "show_features", "label": "Show Features Row", "default": false },
    { "type": "color", "id": "feat_bg_color", "label": "Features Background", "default": "#ffffff" },
    { "type": "color", "id": "feat_title_color", "label": "Feature Title Color", "default": "#1a1a1a" },
    { "type": "color", "id": "feat_text_color", "label": "Feature Text Color", "default": "#666666" },
    { "type": "color", "id": "icon_color", "label": "Icon Color", "default": "#e21e1e" },
    { "type": "color", "id": "icon_hover_color", "label": "Icon Hover Color", "default": "#000000" },
    { "type": "checkbox", "id": "enable_hover_anim", "label": "Enable Icon Hover Animation", "default": true }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Box",
      "limit": 4,
      "settings": [
        { "type": "text", "id": "icon_class", "label": "FontAwesome Class", "default": "fa-solid fa-check" },
        { "type": "text", "id": "title", "label": "Title", "default": "Feature Title" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Feature description." }
      ]
    }
  ],
  "presets": [ { "name": "About Mission Banner" } ]
}
{% endschema %}

{% style %}
  /* Import Requested Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Questrial&family=Oswald:wght@400;600;700&family=Poppins:wght@300;400;500;600&display=swap');

  /* --- Dynamic CSS Variables --- */
  .mission-section-{{ section.id }} {
    --bg-overlay: {{ section.settings.overlay_color }};
    --opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --align: {{ section.settings.text_alignment }};
    
    --h-font: {{ section.settings.heading_font }};
    --h-color: {{ section.settings.heading_color }};
    --h-size: {{ section.settings.heading_size }}px;
    --h-size-mob: {{ section.settings.heading_size_mob }}px;
    --h-mb: {{ section.settings.heading_mb }}px;
    
    --d-font: {{ section.settings.desc_font }};
    --d-color: {{ section.settings.text_color }};
    --d-size: {{ section.settings.desc_size }}px;
    --d-size-mob: {{ section.settings.desc_size_mob }}px;
    
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}px;
    background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: var(--align); /* Dynamic Alignment */
  }

  /* Center alignment fix logic */
  {% if section.settings.text_alignment == 'center' %}
    .mission-section-{{ section.id }} { justify-content: center; text-align: center; }
    .mission-text-box { margin: 0 auto; text-align: center; }
  {% elsif section.settings.text_alignment == 'right' %}
    .mission-section-{{ section.id }} { justify-content: flex-end; text-align: right; }
    .mission-text-box { margin-left: auto; text-align: right; }
  {% else %}
    .mission-section-{{ section.id }} { justify-content: flex-start; text-align: left; }
    .mission-text-box { margin-right: auto; text-align: left; }
  {% endif %}

  .mission-overlay {
    position: absolute; top: 0; left: 0; right: 0; bottom: 0;
    background-color: var(--bg-overlay);
    opacity: var(--opacity);
    z-index: 1;
  }

  .mission-content-container {
    position: relative; z-index: 2;
    max-width: 1200px; width: 100%;
    margin: 0 auto; padding: 0 40px;
  }

  .mission-text-box {
    max-width: 600px;
    width: 100%;
  }

  /* --- Typography & Animations --- */
  
  /* Keyframes */
  @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes slideLeft { from { opacity: 0; transform: translateX(-50px); } to { opacity: 1; transform: translateX(0); } }

  .mission-heading {
    font-family: var(--h-font);
    font-size: var(--h-size);
    color: var(--h-color);
    margin: 0 0 var(--h-mb) 0;
    font-weight: 700;
    line-height: 1.15;
    text-transform: capitalize;
    
    {% if section.settings.animation_type == 'fade-up' %}
      animation: fadeInUp 1s ease-out forwards;
    {% elsif section.settings.animation_type == 'fade-in' %}
      animation: fadeIn 1.5s ease-out forwards;
    {% elsif section.settings.animation_type == 'slide-left' %}
      animation: slideLeft 1s ease-out forwards;
    {% endif %}
  }

  .mission-desc {
    font-family: var(--d-font);
    font-size: var(--d-size);
    color: var(--d-color);
    line-height: 1.6;
    font-weight: 400;
    margin: 0;
    
    {% if section.settings.animation_type != 'none' %}
      opacity: 0; /* Hidden initially for animation */
      animation: fadeInUp 1s ease-out forwards;
      animation-delay: 0.3s; /* Delay after heading */
    {% endif %}
  }

  /* --- Optional Features Grid --- */
  .features-grid-wrapper {
    background-color: {{ section.settings.feat_bg_color }};
    padding: 60px 0;
  }
  .feat-container { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
  .feat-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 30px; }
  
  .feat-item { 
    text-align: center; padding: 25px 20px; 
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 8px;
  }
  
  /* Hover Effect on Feature Box */
  .feat-item:hover {
    transform: translateY(-5px);
  }

  .feat-icon { 
    font-size: 36px; 
    color: {{ section.settings.icon_color }}; 
    margin-bottom: 18px; 
    transition: color 0.3s ease, transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    display: inline-block;
  }

  /* Icon Hover Animation */
  .feat-item:hover .feat-icon {
    color: {{ section.settings.icon_hover_color }};
    {% if section.settings.enable_hover_anim %} transform: scale(1.2) rotate(5deg); {% endif %}
  }

  .feat-title { 
    font-family: {{ section.settings.heading_font }}; 
    font-size: 20px; margin-bottom: 12px; 
    color: {{ section.settings.feat_title_color }};
    font-weight: 600;
  }
  .feat-text { 
    font-family: {{ section.settings.desc_font }}; 
    font-size: 15px; 
    color: {{ section.settings.feat_text_color }};
    line-height: 1.5;
  }

  /* Responsive Mobile */
  @media (max-width: 768px) {
    .mission-section-{{ section.id }} {
      height: {{ section.settings.section_height_mob }}px;
      padding: 40px 0;
    }
    .mission-content-container { padding: 0 25px; }
    
    .mission-heading { font-size: var(--h-size-mob); }
    .mission-desc { font-size: var(--d-size-mob); }
    
    .feat-grid { grid-template-columns: 1fr 1fr; gap: 20px; }
  }
  @media (max-width: 480px) {
    .feat-grid { grid-template-columns: 1fr; }
  }
{% endstyle %}

<!-- Mission Banner -->
<div class="mission-section-{{ section.id }}">
  <div class="mission-overlay"></div>
  <div class="mission-content-container">
    <div class="mission-text-box">
      <h2 class="mission-heading">{{ section.settings.heading }}</h2>
      <p class="mission-desc">{{ section.settings.description }}</p>
    </div>
  </div>
</div>

<!-- Optional Features Section -->
{% if section.settings.show_features %}
  <div class="features-grid-wrapper">
    <div class="feat-container">
      <div class="feat-grid">
        {% for block in section.blocks %}
          <div class="feat-item">
            <div class="feat-icon"><i class="{{ block.settings.icon_class }}"></i></div>
            <h3 class="feat-title">{{ block.settings.title }}</h3>
            <p class="feat-text">{{ block.settings.text }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}