{%- style -%}
  /* Import Requested Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Questrial&family=Oswald:wght@400;500;700&family=Poppins:wght@300;400;500;600&display=swap');

  /* Dynamic CSS Variables */
  .section-{{ section.id }} {
    /* Colors */
    --bg-color: {{ section.settings.bg_color }};
    --card-bg: {{ section.settings.card_bg }};
    --text-color: {{ section.settings.text_color }};
    --heading-color: {{ section.settings.heading_color }};
    --accent-color: {{ section.settings.accent_color }};
    --accent-hover: {{ section.settings.accent_hover_color }};
    --input-bg: {{ section.settings.input_bg_color }};
    --input-border: {{ section.settings.input_border_color }};
    --icon-color: {{ section.settings.icon_color }};
    --icon-bg: {{ section.settings.icon_bg_color }};
    
    /* Typography */
    --h-font: {{ section.settings.heading_font_family }};
    --b-font: {{ section.settings.body_font_family }};
    
    --h-size: {{ section.settings.heading_size }}px;
    --h-size-mob: {{ section.settings.heading_size_mob }}px;
    --b-size: {{ section.settings.body_size }}px;
    --b-size-mob: {{ section.settings.body_size_mob }}px;
    
    background-color: var(--bg-color);
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    font-family: var(--b-font);
  }

  /* Layout */
  .container-pro { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
  .contact-layout { display: grid; grid-template-columns: 1fr 1.5fr; gap: 50px; }
  
  /* Animation Keyframes */
  @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes zoomIn { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } }

  /* Contact Info Card */
  .contact-info-card { 
    background: var(--card-bg); 
    padding: 40px; 
    border-radius: 12px; 
    border: 1px solid rgba(0,0,0,0.05); 
    box-shadow: 0 5px 20px rgba(0,0,0,0.03);
    height: fit-content;
    
    {% if section.settings.animation_type == 'fade-up' %}
      animation: fadeInUp 0.8s ease-out forwards;
    {% elsif section.settings.animation_type == 'zoom-in' %}
      animation: zoomIn 0.8s ease-out forwards;
    {% endif %}
  }
  
  .contact-info-card h2 {
    font-family: var(--h-font);
    font-size: var(--h-size);
    color: var(--heading-color);
    margin-bottom: 15px;
    font-weight: 700;
    text-transform: uppercase;
    line-height: 1.2;
  }
  
  .contact-info-card p {
    font-size: var(--b-size);
    color: var(--text-color);
    margin-bottom: 20px;
    line-height: 1.6;
  }

  .info-item { display: flex; gap: 20px; margin-top: 30px; align-items: flex-start; }
  
  .info-icon { 
    width: 50px; height: 50px; 
    background: var(--icon-bg); 
    border: 1px solid var(--accent-color); 
    color: var(--icon-color); 
    border-radius: 50%; 
    display: flex; align-items: center; justify-content: center; 
    font-size: 20px; flex-shrink: 0; 
    transition: all 0.3s ease;
  }
  
  /* Hover Effect on Icon */
  .info-item:hover .info-icon {
    {% if section.settings.enable_hover %}
      background: var(--accent-color);
      color: #fff;
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    {% endif %}
  }

  .info-text h3 { 
    font-family: var(--h-font);
    font-size: 18px; margin: 0 0 5px; 
    font-weight: 700; color: var(--heading-color); 
  }
  .info-text p { margin: 0; color: var(--text-color); font-size: var(--b-size); }

  /* Contact Form Card */
  .contact-form-card { 
    padding: 10px 0; 
    {% if section.settings.animation_type == 'fade-up' %}
      animation: fadeInUp 1s ease-out forwards;
      animation-delay: 0.2s;
      opacity: 0;
    {% elsif section.settings.animation_type == 'zoom-in' %}
      animation: zoomIn 1s ease-out forwards;
      animation-delay: 0.2s;
      opacity: 0;
    {% endif %}
  }
  
  /* Form Elements */
  .form-block-row { display: flex; gap: 20px; width: 100%; margin-bottom: 20px; }
  .form-field { width: 100%; margin-bottom: 20px; }
  
  .contact-form-card input, 
  .contact-form-card textarea,
  .contact-form-card select { 
    width: 100%; 
    padding: 15px; 
    border: 1px solid var(--input-border); 
    border-radius: 8px; 
    font-family: var(--b-font); 
    outline: none; 
    transition: 0.3s; 
    background: var(--input-bg);
    color: var(--text-color);
    font-size: 16px;
  }
  
  .contact-form-card input:focus, 
  .contact-form-card textarea:focus { 
    border-color: var(--accent-color); 
    box-shadow: 0 0 10px rgba(0,0,0,0.05); 
  }
  
  .submit-btn-contact { 
    background: var(--accent-color); 
    color: #fff; 
    border: none; 
    padding: 18px 40px; 
    border-radius: 8px; 
    font-family: var(--h-font);
    font-weight: 700; 
    cursor: pointer; 
    text-transform: uppercase; 
    width: 100%; 
    transition: 0.3s; 
    font-size: 16px;
    letter-spacing: 1px;
  }
  
  .submit-btn-contact:hover { 
    background: var(--accent-hover);
    transform: translateY(-3px); 
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  
  .success-msg { 
    background: #e8f5e9; 
    color: #2e7d32; 
    padding: 15px; 
    border-radius: 8px; 
    margin-bottom: 20px; 
    font-weight: 600; 
  }

  @media (max-width: 768px) {
    .contact-layout { grid-template-columns: 1fr; }
    .form-block-row { flex-direction: column; gap: 0; margin-bottom: 0; }
    .form-block-row input { margin-bottom: 20px; }
    
    .contact-info-card h2 { font-size: var(--h-size-mob); }
    .contact-info-card p, .info-text p { font-size: var(--b-size-mob); }
  }
{%- endstyle -%}

<!-- FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="contact-page-pro section-{{ section.id }}">
  <div class="container-pro content-section">
    <div class="contact-layout">
      
      <!-- Left Side: Contact Info -->
      <div class="contact-info-card">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.description }}</p>
        
        <!-- Address Block -->
        {% if section.settings.show_address %}
        <div class="info-item">
          <div class="info-icon"><i class="{{ section.settings.icon_address }}"></i></div>
          <div class="info-text">
            <h3>{{ section.settings.label_address }}</h3>
            <p>{{ section.settings.text_address }}</p>
          </div>
        </div>
        {% endif %}

        <!-- Phone Block -->
        {% if section.settings.show_phone %}
        <div class="info-item">
          <div class="info-icon"><i class="{{ section.settings.icon_phone }}"></i></div>
          <div class="info-text">
            <h3>{{ section.settings.label_phone }}</h3>
            <p>{{ section.settings.text_phone }}</p>
          </div>
        </div>
        {% endif %}

        <!-- Email Block -->
        {% if section.settings.show_email %}
        <div class="info-item">
          <div class="info-icon"><i class="{{ section.settings.icon_email }}"></i></div>
          <div class="info-text">
            <h3>{{ section.settings.label_email }}</h3>
            <p>{{ section.settings.text_email }}</p>
          </div>
        </div>
        {% endif %}
      </div>

      <!-- Right Side: Contact Form -->
      <div class="contact-form-card">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <p class="success-msg">Message sent successfully!</p>
          {% elsif form.errors %}
            <div class="success-msg" style="background:#ffebee; color:#c62828;">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          
          <div class="contact-form-blocks">
            
            {%- if section.blocks.size > 0 -%}
              <!-- DYNAMIC FORM BLOCKS -->
              {% for block in section.blocks %}
                {% case block.type %}
                  
                  {% when 'text_input' %}
                    <div class="form-field">
                      <input type="text" 
                             name="contact[{{ block.settings.label | handleize }}]" 
                             placeholder="{{ block.settings.placeholder }}" 
                             {% if block.settings.required %}required{% endif %}>
                    </div>

                  {% when 'email_input' %}
                    <div class="form-field">
                      <input type="email" 
                             name="contact[email]" 
                             placeholder="{{ block.settings.placeholder }}" 
                             required>
                    </div>

                  {% when 'phone_input' %}
                    <div class="form-field">
                      <input type="tel" 
                             name="contact[phone]" 
                             placeholder="{{ block.settings.placeholder }}" 
                             {% if block.settings.required %}required{% endif %}>
                    </div>

                  {% when 'textarea' %}
                    <div class="form-field">
                      <textarea name="contact[body]" 
                                rows="{{ block.settings.rows }}" 
                                placeholder="{{ block.settings.placeholder }}" 
                                {% if block.settings.required %}required{% endif %}></textarea>
                    </div>

                  {% when 'double_inputs' %}
                    <div class="form-block-row">
                      <input type="text" name="contact[name]" placeholder="Your Name" required>
                      <input type="email" name="contact[email]" placeholder="Your Email" required>
                    </div>

                {% endcase %}
              {% endfor %}

            {%- else -%}
              <!-- DEFAULT FALLBACK FORM (Matches Screenshot) -->
              <div class="form-block-row">
                <input type="text" name="contact[name]" placeholder="Your Name" required>
                <input type="email" name="contact[email]" placeholder="Your Email" required>
              </div>
              <div class="form-field">
                <input type="tel" name="contact[phone]" placeholder="Phone Number">
              </div>
              <div class="form-field">
                <textarea name="contact[body]" rows="5" placeholder="How can we help you?" required></textarea>
              </div>
            {%- endif -%}

          </div>

          <button type="submit" class="submit-btn-contact">{{ section.settings.btn_text }}</button>
        {% endform %}
      </div>

    </div>
  </div>
</div>

