{% schema %}
{
  "name": "About Story Advanced",
  "settings": [
    { "type": "header", "content": "General Layout" },
    { "type": "color", "id": "bg_color", "label": "Section Background", "default": "#ffffff" },
    { "type": "range", "id": "padding_top", "label": "Padding Top", "min": 20, "max": 100, "step": 5, "default": 60, "unit": "px" },
    { "type": "range", "id": "padding_bottom", "label": "Padding Bottom", "min": 20, "max": 100, "step": 5, "default": 80, "unit": "px" },

    { "type": "header", "content": "Top Heading Settings" },
    { "type": "text", "id": "top_heading", "label": "Main Heading Text", "default": "World's Best Meat Shop" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#1a1a1a" },
    { "type": "range", "id": "top_font_size", "label": "Font Size (Desktop)", "min": 24, "max": 80, "step": 1, "default": 42, "unit": "px" },
    { "type": "select", "id": "heading_font", "label": "Font Family", "options": [
      { "value": "'Oswald', sans-serif", "label": "Oswald (Bold)" },
      { "value": "'Questrial', sans-serif", "label": "Questrial (Clean)" },
      { "value": "'Poppins', sans-serif", "label": "Poppins (Modern)" },
      { "value": "'Playfair Display', serif", "label": "Playfair Display (Classic)" }
    ], "default": "'Oswald', sans-serif" },
    { "type": "range", "id": "heading_gap", "label": "Gap Below Heading", "min": 20, "max": 100, "step": 5, "default": 60, "unit": "px" },

    { "type": "header", "content": "Story Image Settings" },
    { "type": "image_picker", "id": "story_img", "label": "Story Image" },
    { "type": "range", "id": "img_radius", "label": "Image Corner Radius", "min": 0, "max": 50, "step": 1, "default": 15, "unit": "px" },
    { "type": "checkbox", "id": "enable_zoom", "label": "Enable Zoom on Hover", "default": true },
    { "type": "range", "id": "shadow_opacity", "label": "Shadow Opacity", "min": 0, "max": 100, "step": 5, "default": 10, "unit": "%" },

    { "type": "header", "content": "Sub-Heading (Right Side)" },
    { "type": "text", "id": "sub_heading", "label": "Sub Heading Text", "default": "Our Story" },
    { "type": "color", "id": "accent_color", "label": "Sub Heading Color", "default": "#be1622" },
    { "type": "range", "id": "sub_font_size", "label": "Font Size", "min": 18, "max": 50, "step": 1, "default": 32, "unit": "px" },
    { "type": "select", "id": "sub_heading_font", "label": "Font Family", "options": [
      { "value": "'Oswald', sans-serif", "label": "Oswald" },
      { "value": "'Questrial', sans-serif", "label": "Questrial" },
      { "value": "'Poppins', sans-serif", "label": "Poppins" }
    ], "default": "'Oswald', sans-serif" },
    
    { "type": "header", "content": "Paragraph Text Settings" },
    { "type": "richtext", "id": "story_text", "label": "Description", "default": "<p>We are a UAE-based halal meat store committed to delivering fresh, high-quality meat you can trust.</p>" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#555555" },
    { "type": "range", "id": "body_font_size", "label": "Font Size", "min": 12, "max": 24, "step": 1, "default": 15, "unit": "px" },
    { "type": "select", "id": "body_font", "label": "Font Family", "options": [
      { "value": "'Poppins', sans-serif", "label": "Poppins" },
      { "value": "'Questrial', sans-serif", "label": "Questrial" },
      { "value": "'Inter', sans-serif", "label": "Inter" }
    ], "default": "'Poppins', sans-serif" }
  ],
  "presets": [ { "name": "About Story Advanced" } ]
}
{% endschema %}

{% style %}
  /* Loading Google Fonts: Oswald, Poppins, Questrial, Playfair Display, Inter */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Oswald:wght@500;700&family=Playfair+Display:wght@700&family=Poppins:wght@300;400;500&family=Questrial&display=swap');

  .sec-story-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: 20px;
    padding-right: 20px;
  }

  .story-container {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* --- Top Heading Dynamic Styles --- */
  .story-main-title {
    text-align: center;
    font-family: {{ section.settings.heading_font }};
    font-size: {{ section.settings.top_font_size }}px;
    color: {{ section.settings.heading_color }};
    text-transform: capitalize;
    font-weight: 600;
    margin: 0 0 {{ section.settings.heading_gap }}px 0;
    line-height: 1.2;
    transition: color 0.3s ease;
  }

  /* --- Grid Layout (Centered) --- */
  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px; 
    align-items: center; /* Vertically Center */
  }

  /* --- Image Box Advanced --- */
  .story-img-box {
    width: 100%;
    border-radius: {{ section.settings.img_radius }}px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0, {{ section.settings.shadow_opacity | divided_by: 100.0 }});
    line-height: 0;
    transform: translateZ(0); /* Fix for Safari border-radius */
  }
  
  .story-img-box img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Hover Effect Condition */
  {% if section.settings.enable_zoom %}
    .story-img-box:hover img {
      transform: scale(1.05);
    }
  {% endif %}
  
  /* --- Content Box --- */
  .story-content-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  /* Sub Heading Dynamic Styles */
  .story-sub-title {
    font-family: {{ section.settings.sub_heading_font }};
    font-size: {{ section.settings.sub_font_size }}px;
    color: {{ section.settings.accent_color }};
    font-weight: 700;
    margin: 0 0 20px 0;
    text-transform: capitalize;
  }

  /* Paragraph Dynamic Styles */
  .story-rte {
    font-family: {{ section.settings.body_font }};
    font-size: {{ section.settings.body_font_size }}px;
    line-height: 1.7;
    color: {{ section.settings.text_color }};
  }

  .story-rte p {
    margin-bottom: 20px;
  }
  
  .story-rte p:last-child {
    margin-bottom: 0;
  }

  /* --- Responsive --- */
  @media (max-width: 900px) {
    .story-grid {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }
    .story-main-title {
      font-size: {{ section.settings.top_font_size | times: 0.8 }}px; /* Mobile font smaller */
      margin-bottom: 30px;
    }
    .story-sub-title {
      font-size: {{ section.settings.sub_font_size | times: 0.9 }}px;
    }
    .sec-story-{{ section.id }} {
      padding-top: 40px;
      padding-bottom: 40px;
    }
  }
{% endstyle %}

<section class="sec-story-{{ section.id }}">
  <div class="story-container">
    
    <!-- Top Heading -->
    {% if section.settings.top_heading != blank %}
      <h1 class="story-main-title">{{ section.settings.top_heading }}</h1>
    {% endif %}

    <div class="story-grid">
      
      <!-- Left: Image -->
      <div class="story-img-box">
        {% if section.settings.story_img != blank %}
          <img src="{{ section.settings.story_img | image_url: width: 1000 }}" alt="{{ section.settings.story_img.alt | default: 'Our Story' }}" loading="lazy">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <!-- Right: Content -->
      <div class="story-content-box">
        {% if section.settings.sub_heading != blank %}
          <h2 class="story-sub-title">{{ section.settings.sub_heading }}</h2>
        {% endif %}
        
        <div class="story-rte">
          {{ section.settings.story_text }}
        </div>
      </div>

    </div>
  </div>
</section>